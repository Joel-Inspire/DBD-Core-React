0020 FILE$ = ARG(1)
0030 OPEN (1) FILE$
0040 FIB_INFO$ = MID(FIB(1),10,1)
0050 IF FIB_INFO$ = $0D$ {
0060   PRINT "Directory File"
0070   STOP
0080 } ELSE IF FIB_INFO$ = $02$ {
0090   PRINT "Keyed File"
0100   STOP
0110 }ELSE IF FIB_INFO$ = $04${
0120   PRINT "Program"
0130   STOP
0140 }ELSE{  
0150 PRINT "Other File Type"
0160 }
0170 CLOSE (1)
0180 RELEASE

