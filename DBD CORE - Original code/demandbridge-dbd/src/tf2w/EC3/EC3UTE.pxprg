0553 IF UM$(20,1)<>"Y" THEN SQP=IC0[14],PRC_DIV=IC0[14] ELSE SQP=UM[1],PRC_DIV=UM[0]
0554 IF SQP=0 THEN SQP=1
0555 IF PRC_DIV=0 THEN PRC_DIV=1
0560 QBI$="010305070911212325272931",PBI$="020406081012222426283032"
0562 TQBI$="010305070911131517192123",TPBI$="020406081012141618202224"
0600 REM "find existing pricing table
0605 PTABLE$="N"
0610 FIND (FMPCHAN,KEY="P"+IC0$(109,3)+CUSTCAT$,DOM=0611)IOL=0310; PTABLE$="Y"
0900 REM "
0910 IF PTABLE$="N" THEN GOSUB 7000; GOTO 5000
0920 SQP=T[0]; IF SQP=0 THEN SQP=IC0[0] END_IF ; IF SQP=0 THEN SQP=1
0980 ON POS(T$(38,1)="SDMG")-1 GOTO 1000,1500,2000,2500
1000 REM "Pricing table: S-method (Sell price)
1020 FOR X=0 TO 11
1022 INDEX=X+1,QI=NUM(TQBI$(X*2+1,2)),PI=NUM(TPBI$(X*2+1,2)); REM "157200 SSP277028
1030 Q[INDEX,0]=T[QI],Q[INDEX,1]=T[QI]/SQP,P[INDEX]=T[PI]
1080 NEXT X
1081 IF Q[1,1]>1 THEN Q[0,0]=1,Q[0,1]=1,P[0]=IC0[0] ! SSP278081
1450 GOTO 5000
1500 REM "Pricing table: D-method (Discount from list)
1520 FOR X=0 TO 11
1522 INDEX=X+1,QI=NUM(TQBI$(X*2+1,2)),PI=NUM(TPBI$(X*2+1,2)); REM "157200 SSP277028
1524 Q[INDEX,0]=T[QI],Q[INDEX,1]=T[QI]/SQP
1530 REM "calc discount
1532 LIST=IC0[0],DISCOUNT=LIST*(T[PI]/100)
1534 P[INDEX]=LIST-DISCOUNT
1580 NEXT X
1581 IF Q[1,1]>1 THEN Q[0,0]=1,Q[0,1]=1,P[0]=IC0[0] ! SSP278081
1950 GOTO 5000
2000 REM "Pricing table: M-method (markup from cost)
2020 FOR X=0 TO 11
2022 INDEX=X+1,QI=NUM(TQBI$(X*2+1,2)),PI=NUM(TPBI$(X*2+1,2)); REM "157200 SSP277028
2024 Q[INDEX,0]=T[QI],Q[INDEX,1]=T[QI]/SQP
2030 REM "calc sell
2032 ON POS(T$(39,1)="SAL") GOTO 2034,2034,2035,2036
2034 BASECOST=IC0[20]; GOTO 2040
2035 BASECOST=IC0[18]; GOTO 2040
2036 BASECOST=IC0[17]; GOTO 2040
2040 P[INDEX]=BASECOST+BASECOST*T[PI]*.01 ! SSP 278081, changed to match logic in IC2ICF to calc price P[INDEX]=BASECOST/(100-T[PI]/100)
2080 NEXT X
2081 IF Q[1,1]>1 THEN Q[0,0]=1,Q[0,1]=1,P[0]=IC0[0] ! SSP278081
2450 GOTO 5000
2500 REM "Pricing table: G-method ! SSP278081, added/fixed logic
2520 FOR X=0 TO 11
2522 INDEX=X+1,QI=NUM(TQBI$(X*2+1,2)),PI=NUM(TPBI$(X*2+1,2))
2524 Q[INDEX,0]=T[QI],Q[INDEX,1]=T[QI]/SQP
2530 REM "calc sell
2532 ON POS(T$(39,1)="SAL") GOTO 2534,2534,2535,2536
2534 BASECOST=IC0[20]; GOTO 2540
2535 BASECOST=IC0[18]; GOTO 2540
2536 BASECOST=IC0[17]; GOTO 2540
2540 P[INDEX]=BASECOST*100/(100-T[PI])
2580 NEXT X
2581 IF Q[1,1]>1 THEN Q[0,0]=1,Q[0,1]=1,P[0]=IC0[0]
2650 GOTO 5000
5000 REM "EOJ
5040 GOTO 9900
7000 REM "load quantity breaks from IC0 (when no pricing table exists)
7002 IF SQP=0 THEN SQP=1
7003 ORG_SQP=SQP,AUMQP=SQP,ORG_PRC_DIV=PRC_DIV,AUMPD=PRC_DIV
7005 IF STP(OPTIONS$,1)<>"" THEN IF OPTIONS$(1,1)="Y" THEN GOSUB 7100 ! WO175232, use alt unit of issue from FM1 if there is one
7020 FOR X=0 TO 11
7022 INDEX=X+1,QI=NUM(QBI$(X*2+1,2)),PI=NUM(PBI$(X*2+1,2))
7025 Q[INDEX,0]=IC0[QI],Q[INDEX,1]=IC0[QI]/SQP,P[INDEX]=IC0[PI]*AUMPD/ORG_PRC_DIV ! WO175232, Add calculation to price, could be using alt u/m from FM1, if not will come out the same as without the calculation
7030 NEXT X
7031 IF Q[1,1]>1 THEN Q[0,0]=1,Q[0,1]=1,P[0]=IC0(0)*AUMPD/ORG_PRC_DIV; REM "base price 157200 SSP278081, if first break qty is 1 then don't populate range 0
7040 RETURN 
