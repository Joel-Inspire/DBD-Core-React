7115 IF STP(FM1$(238,4),1)="" OR FM1[25]=0 THEN GOTO *RETURN
7120 DIM UM$(21),UM[2]; FIND (Z[1],KEY="U/M"+FM1$(238,4),DOM=*NEXT)IOL=0320
7125 IF UM$(20,1)<>"Y" THEN SQP=FM1[25],PRC_DIV=FM1[25] ELSE SQP=UM[1],PRC_DIV=UM[0]
7130 IF SQP=0 THEN SQP=1
7131 IF PRC_DIV=0 THEN PRC_DIV=1
7135 AUMQP=SQP,AUMPD=PRC_DIV,OPTIONS$(2,1)="Y",%BPACK=AUMQP,%SELL_UM$=FM1$(238,4)
