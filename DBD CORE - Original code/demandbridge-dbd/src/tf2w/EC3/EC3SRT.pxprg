0010 REM "Shell Sort Routine <EC3SRT>
0020 SETESC 9300; SETERR 9000
0035 REM "4.5 - 12/06/00 - 15.1 - kmc - SSP# 132405
0040 REM "Copyright 2000 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,A${ALL},ELEMENT_COUNT,E1$,E2$
0100 SETERR 9000
0110 X0$="EC3SRT",X1$="Shell Sort an Array"
0115 IF ELEMENT_COUNT=1 THEN GOTO 9900; REM "If only 1 element, then we're done
0120 DIM Z0$(80,"-")
0130 K0=20,K1=1
0135 C9=-1
0200 REM "
0600 REM "
0610 POSITION=1-ELEMENT_COUNT+1
1000 REM "Select initial increment
1010 INCREMENT=1
1020 IF POSITION<14 THEN INCREMENT=1; GOTO 1030
1022 WHILE INCREMENT<POSITION; INCREMENT=3*INCREMENT+1; WEND 
1023 INCREMENT=INCREMENT/3; INCREMENT=INCREMENT/3
2000 REM "Main sort loop
2010 WHILE INCREMENT>0
2020 FOR INDEX=1+INCREMENT TO ELEMENT_COUNT
2030 VALUE1$=A$[INDEX]
2040 FOR INDEX2=INDEX-INCREMENT TO 1 STEP INCREMENT*(-1)
2050 IF A$[INDEX2]<=VALUE1$ THEN EXITTO 2060
2052 A$[INDEX2+INCREMENT]=A$[INDEX2]
2055 NEXT INDEX2
2060 A$[INDEX2+INCREMENT]=VALUE1$
2070 NEXT INDEX
2080 INCREMENT=INT(INCREMENT/3)
2090 WEND 
5000 REM "EOJ
5040 GOTO 9900
6000 REM "BACKGROUND
6005 PRINT (0,ERR=6016)'SB',
6020 PRINT @(0,4),"This CSI utility program will ... "
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
