0010 REM "Setup default lines <GL2XAB>
0020 SETESC 9300; SETERR 9000
0035 REM "5.4 - 10/14/05 - 11.985277 - dff - SSP# 188463
0040 REM "Copyright 2005 TopForm Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0050 X0$="GL2XAB"
0100 ENTER X3$,T9$,T{ALL},V9$,F,A0
0170 FID_0$=FID(0); IF %IN_WEBEC$="Y" THEN FID_0$(1,1)="G"
0200 DIM Y[4]
0210 A=0,A9=0
0290 IOLIST Y[0],Y[1],Y[2],Y[3],Y[4]
0310 IOLIST A9,V3$,V[0],V[1],V[2],V[3],V[4]
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01X GL1...  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
1000 REM "Set up lines
1050 FOR I=1 TO LEN(T9$) STEP 12
1060 FIND (Z[1],KEY=T9$(I,12),DOM=1061)
1065 IF T[INT(I/12)+1]=0 THEN GOTO 1900
1070 GOSUB 5200; IF A>0 THEN GOSUB 3000
1075 A=A9,A9=0
1120 DIM V3$(37),V[4]
1130 IF V9$<>"" THEN V3$(1,6)=V9$ ELSE V3$(1,6)=X3$(15,6)
1150 V3$(7,12)=T9$(I,12),V[3]=T[INT(I/12)+1]
1160 T[0]=T[0]-V[3]
1990 NEXT I
2000 REM "Finish up
2010 GOSUB 3000
2020 T9$=""
2050 GOTO 9900
3000 REM "Write out line to index A, A9 is assumed to point to next line
3005 IF A<=0 THEN GOTO 3090
3010 WRITE (F,IND=A)IOL=0310
3090 RETURN 
4900 REM "END OF LINES
4920 CALL "ZZEXPF",X3$,X4$,"X"+STR(F),"",G9; IF G9>0 THEN GOTO 9800
4925 IF %GUI THEN PRINT (0,ERR=*NEXT)'GOTO'(200),'POP'
4930 Z=NUM(FIN(F,"MAXREC")); Y[3]=Z-1
4940 GOTO 5230
5000 REM "End of lines
5090 GOTO 9900
5200 REM "GET NEXT INDEX TO FILE IN A9
5210 EXTRACT (F,IND=0,ERR=5295)IOL=0290
5215 IF Y[4]=-2 THEN READ (F); WAIT 0; GOTO 5210
5220 Y[4]=-2; WRITE (F,IND=0)IOL=0290
5230 IF Y[1]<1 THEN A9=Y[2],Y[2]=Y[2]+1; GOTO 5260
5255 A9=Y[1]; READ (F,IND=A9)Y[1]
5260 IF Y[0]<Y[3]-1 THEN Y[0]=Y[0]+1,Y[4]=-1 ELSE Y[4]=-1; GOTO 4900
5280 WRITE (F,IND=0)IOL=0290
5285 IF A0=0 THEN A0=A9
5290 RETURN 
5295 IF ERR<>0 THEN GOTO 9000 ELSE RETRY 
9000 REM "ERROR PROCESSING
9010 Y5=ERR,Y6=TCB(5)
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9110 GOTO 9080
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9900 REM "END PROGRAM
9915 IF %IN_WEBEC$="N" THEN PRINT @(0,13),'CL',
9920 CALL "ZZFLES",X3$,Y1$,Y0$,"CLOSE",Z{ALL},Z0,Z1
9950 EXIT 
9999 END 
