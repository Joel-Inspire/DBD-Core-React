0070 REM "PARAM$=EXPORTAR parameters
0071 REM "FILES[] 0=header file slot, 1=detail file slot
0072 REM "TRAN$,TRAN[ALL]=GL6 info
0075 REM "Z_CALLING[] = Z array from calling progam
0076 REM "UPDATE$ = update info, (22,6)=audit control number
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,PARAM$,FILES{ALL},TRAN$,TRAN{ALL},Z_CALLING{ALL},UPDATE$
0100 SETERR 9000
0110 X0$="GL2XTA",X1$="Export G/L Transaction Information"
0120 IF FN%NEA("FILES",0)=0 THEN DIM FILES[1]
0130 MASK_82$="00000000.00-"
0300 REM "IOLISTS
0400 REM "Check for files, if not there then create
0401 REM "if array values <>0 then we've already done this
0405 IF FILES[0]<>0 THEN GOTO 0600
0406 HEADER_FILE$=STP(PARAM$(13,8),1)
0410 CLOSE (14); OPEN (14,ERR=0411)HEADER_FILE$; CLOSE (14); GOTO 0415
0411 SERIAL HEADER_FILE$,0,0
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O "+HEADER_FILE$+" 13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0524 REM "Close and re-open as text files, read to the end in case there are existing entries, then save file slots in FILES[]
0525 CLOSE (Z[1]); OPEN LOCK (Z[1],OPT="TEXT")HEADER_FILE$; FILES[0]=Z[1]
0530 READ (FILES[0],END=0531); GOTO 0530
0600 REM "
0900 REM "Check to see if we should skip this source journal based on params
0910 IF POS(TRAN$(6,2)=PARAM$(21,20),2)<>0 THEN GOTO 9900
1000 REM "Write Header Record
1001 DIM HEADER$(54)
1005 TRAN$=PAD(TRAN$,41)
1010 HEADER$(1,4)=FNZ$(TRAN$(2,2)),HEADER$(5,2)=TRAN$(4,2); REM "Fiscal Year, Accounting Period
1015 HEADER$(7,2)=TRAN$(6,2),HEADER$(9,6)=TRAN$(8,6); REM "TopForm Source Journal, TopForm Audit Control Number
1020 HEADER$(15,12)=TRAN$(14,12),HEADER$(27,6)=FND$(TRAN$(28,6)); REM "General Ledger Account Number, Transaction Date
1030 HEADER$(35,2)=TRAN$(34,2),HEADER$(37,6)=TRAN$(36,6); REM "TopForm Source System, Reference Code
1035 HEADER$(43,12)=STR(TRAN[0]:MASK_82$); REM "Posting amount
1100 REM "Write record
1105 WRITE RECORD (FILES[0])HEADER$+$0A0D$
5000 GOTO 9900
8955 DEF FND$(Z9$)=STR(MOD((ASC(Z9$(1,1))-65)*10+1900+NUM(Z9$(2,1))-1570*POS("  "=Z9$(1,2)),100):"0#")+Z9$(3,4)
8960 DEF FNZ$(Z0$)=STR((ASC(Z0$(1,1))-65)*10+1900+NUM(Z0$(2)))
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9930 SETERR 9940; Q1$=A1$; EXIT 
