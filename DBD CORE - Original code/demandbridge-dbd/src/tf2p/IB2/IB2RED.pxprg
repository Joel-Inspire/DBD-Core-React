0010 REM "<IB2RED> Read invoices from ARB file
0020 SETESC 9300; SETERR 9000
0035 REM "5.3 - 01/05/05 - 16.948611 - lms - SSP# 178314
0040 REM "Copyright 2005 TopForm Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,AUDIT$
0100 SETERR 9000
0110 X0$="IB2RED",X1$="Read invoices from ARB file"
0120 DIM Z0$(80,"-")
0130 K0=20,K1=1,C=1
0135 C9=-1
0140 DIM Z1$(15," "),I[30]
0170 IF POS("MS"=UCS(SYS)) THEN ISWIN=1 ELSE ISWIN=0
0210 WINCHECK=TCB(88)
0390 IOLIST I$,I[0],I[1],I[2],I[3],I[4],I[5],I[6],I[7],I[8],I[9],I[10],I[11],I[12],I[13],I[14],I[15],I[16],I[17],I[18],I[19],I[20],I[21],I[22],I[23],I[24],I[25],I[26],I[27],I[28],I[29],I[30]
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="09O ARB...  10O IB0...  13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0600 READ (Z[13],KEY=X3$(9,3)+"IBS",DOM=9900)Q$
0601 IF Q$(7,1)<>"Y" THEN GOTO 9900
0900 READ (Z(9),KEY="",DOM=*NEXT); REM "reposition file
1000 REM "Main Process
1005 INV$=KEY(Z[9],END=9900)
1010 READ (Z[9],KEY=INV$,DOM=1011)IOL=0390; REM "Initial read from orders file (ARB)
1020 READ (Z[10],KEY=I$(15,10),DOM=1000)IB0$
1030 PRINTER_CFG$="512,1,3,,"
1045 IF IB0$(1,10)<>I$(15,10) THEN GOTO 1090
1050 IF FILE_OPEN$="YES" THEN GOTO 1053 ELSE IF MAKE_FILE$<>"NO" THEN GOSUB 4000
1052 IF MAKE_FILE$<>"NO" THEN CHANNEL=HFN; OPEN LOCK (CHANNEL,OPT="TEXT")STP(Q$(8,120),1)+FILE_NAME$; FILE_OPEN$="YES"
1053 IF ARCHIVE_OPEN$="YES" THEN GOTO 1060 ELSE IF ARCHIVE$="NO" THEN GOTO 1060
1055 IF ARCHIVE$="YES" THEN CHANNEL_1=HFN; OPEN LOCK (CHANNEL_1,OPT="TEXT")STP(Q$(128,120),1)+FILE_NAME$; ARCHIVE_OPEN$="YES"
1060 GOSUB 2000
1090 GOTO 1000
2000 REM "Routine to write to IBSA file
2020 CALL "IB2INV",X3$,X4$,I$(15,10),INV$,AUDIT$,CHANNEL,CHANNEL_1,I{ALL}
2090 RETURN 
4000 REM " CREATE THE FILE
4002 IF POS("WDX"=Q$(8,120)) AND WINCHECK=0 THEN MAKE_FILE$="NO"
4005 FILE_NAME$="ARINV"+STR(NUM(AUDIT$(1,6)):"000000")+".txt"
4010 FULL_NAME$=STP(Q$(8,120),1)+FILE_NAME$
4015 IF MAKE_FILE$<>"NO" THEN SERIAL FULL_NAME$,,,ERR=4020
4020 IF Q$(128,120)=DIM(120) THEN GOTO 4049
4025 IF POS("WDX"=Q$(128,120)) AND WINCHECK=0 THEN ARCHIVE$="NO"; GOTO 4049
4035 FULL_NAME$=STP(Q$(128,120),1)+FILE_NAME$
4040 SERIAL FULL_NAME$,,,ERR=4049; ARCHIVE$="YES"
4049 RETURN 
9000 REM "Error Processing
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM "Transfer Control
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "Ctrl Logic
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "End Program
9901 FILE_OPEN$=""
9905 CLOSE (CHANNEL,ERR=*NEXT)
9906 CLOSE (CHANNEL_1,ERR=*NEXT)
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 EXIT 
9999 END 
