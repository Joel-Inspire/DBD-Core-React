0070 REM "SSN_WORK$ is Business basic serial number to check, should will be left-zero filled to 10 characters if needed.
0071 REM "APP$ will be '' if no record found, or will be the encrypted record.
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,SSN_IN$,APP$
0100 SETERR 9000
0110 X0$="RT2APP",X1$="Retreive/Verify Apps Record"
0300 K$="lightyears",APP$=""
0500 REM " Open zzparm
0510 CLOSE (14); OPEN (14)"ZZPARM"
0900 REM "Fix SSN_WORK$ to 9 chars, left zero fill  + blank last char
0904 SSN_WORK$=SSN_IN$; REM "Use separate variable from SSN_IN$ to avoid changing the value passed in
0905 IF LEN(SSN_WORK$)=10 THEN SSN_WORK$=SSN_WORK$(2); REM "IF 10 long (as stored in some places) then cut down to 9 before proceeding
0910 SSN_WORK$=PAD(SSN_WORK$,9,0,"0")+" "
1000 REM "Search apps records
1010 READ (14,KEY="APPS",DOM=*NEXT)
1020 K14$=KEY(14,END=DONE_LOOKING)
1025 IF K14$ LIKE "APPS????" THEN GOTO *NEXT ELSE GOTO DONE_LOOKING
1030 READ RECORD (14,KEY=K14$,DOM=1020)ENCRYPTED$
1035 CALL "ZZCRYP",X3$,K$,"","U",CLEARTEXT$,I{ALL},ENCRYPTED$,X9
1040 IF MID(CLEARTEXT$,37,10)=SSN_WORK$ THEN APP$=ENCRYPTED$; GOTO DONE_LOOKING
1090 GOTO 1020
5000 DONE_LOOKING:REM "Leave now
5090 GOTO 9900
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9900 REM "END PROGRAM
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
