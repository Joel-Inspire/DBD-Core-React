0070 REM "C0$ is command string, 'D'=delete, 'A'=add
0071 REM "K0$ is key to match first part of key to
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,C0$,K0$
0100 SETERR 9000
0110 X0$="RT2AR1",X1$="Add/Delete sort files for AR1"
0120 DIM S$(40)
0300 REM "IOLISTS
0310 IOLIST A$
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O AR1...  02O ARE... 03O ARU... 04O ARW... 13O ZZPARM "
0520 GOSUB 9750; ON Z0 GOTO 0521,9900
1000 REM "Read record
1005 EXTRACT (Z[1],KEY=K0$,DOM=1006); REM "Use extract, we might have the full key
1010 K$=KEY(Z[1],END=1090); IF K$(1,LEN(K0$))<>K0$ THEN GOTO 1090
1020 READ (Z[1],KEY=K$)IOL=0310
1025 A2$=A$(155,10)+A$(1,10); REM "ARE lookup sequence + customer #
1030 A3$=A$(278,4)+A$(1,10); REM "ARU salesperson #1 + customer #
