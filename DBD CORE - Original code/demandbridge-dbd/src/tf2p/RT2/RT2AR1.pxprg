1060 IF C0$="D" THEN GOSUB 1100 ELSE IF C0$="A" THEN GOSUB 1200 ELSE GOTO 9900
1080 GOTO 1010
1095 GOTO 9900
1100 REM "Delete sorts
1120 REMOVE (Z[2],KEY=A2$,DOM=1121)
1130 REMOVE (Z[3],KEY=A3$,DOM=1131)
1140 REMOVE (Z[4],KEY=A4$,DOM=1141)
1195 RETURN 
1200 REM "Add sorts
1220 WRITE (Z[2],KEY=A2$)
1230 WRITE (Z[3],KEY=A3$)
1240 WRITE (Z[4],KEY=A4$)
1295 RETURN 
9000 REM "ERROR PROCESSING
9010 Y5=ERR,Y6=TCB(5); IF Y5=68 OR Y5=69 THEN GOTO 9500
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
