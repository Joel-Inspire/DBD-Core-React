0010 REM "<RT2WOC> Write RT7 Data given customer
0015 REM "Prog Type: IP-3.1.2
0020 SETESC 9300; SETERR 9000
0035 REM "4.1 - 09/14/98 - 16.72 - cwj - SSP# 103023
0040 REM "Copyright 1997 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0070 REM "CUST$=Customer number, lookup customer, if found the if has ZP4 code then lookup ZP4 record, get list of sps to update and call RT2WOR for each
0071 REM "F$ = file name, T$= Update, Delete
0072 REM "K$=key value
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,CUST$,F$,T$,K$
0100 SETERR 9000
0110 X0$="RT2WOC",X1$="Write RT7 Data Given Customer"
0120 DIM S$(40)
0145 C$=$7E$,DATA_SIZE%=428
0300 REM "IOLISTS
0310 IOLIST A$
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 FILE_NAME$="AR1",INDEX=1; GOSUB 9750
0511 FILE_NAME$="ZP4",INDEX=2; GOSUB 9750
0512 FILE_NAME$="ZZPARM"; INDEX=13; GOSUB 9750
0514 FILE_NAME$="RT7",INDEX=4; GOSUB 9750
0516 IF CUST$="" OR STP(CUST$,3," ")="" THEN FILE_NAME$="RT0",INDEX=5; GOSUB 9750; REM "If cust# all blanks then we are doing stock inventory so open RT0 to check stock inventory flag for each salesperson.
0585 W9$=""; CALL "RT2PRM",ERR=0586,X3$,X4$,W9$
1000 REM 
1005 IF CUST$="" OR STP(CUST$,3," ")="" THEN GOSUB CHECK_STOCK_INV; DIM AR1$(512); GOTO 8404; REM "If customer # blank or '' then that means stock inventory,so build SEND_TO$ from RT0 info.
1010 READ (Z[1],KEY=CUST$(1,10),DOM=9900)AR1$
1020 IF STP(AR1$(401,10),3," ")="" THEN GOTO 9900 ELSE READ (Z[2],KEY=AR1$(401,10),DOM=9900)ZP4$
8400 REMOTE_TM:REM "Call RT2WOR to post to remote T/M based on paramters"+
8403 SP_CODE$=ZP4$(359,4); CALL "RT2LST",ERR=9900,X3$,X4$,W9$,ZP4$(1,4),SP_CODE$,SEND_TO$
8404 IF LEN(SEND_TO$)=0 THEN GOTO 8445
8406 CLOSE (Z[4]); FILE_NAME$="RT7",INDEX=4; GOSUB 9750
8407 FOR INDEX=1 TO LEN(SEND_TO$)-3 STEP 4
8420 IF T$="D" THEN CALL "RT2WOR",ERR=8421,X3$,X4$,SEND_TO$(INDEX,4),F$,T$,K$,S1$,A,A{ALL} ELSE DIM KEY_4$(14); KEY_4$(1,4)=SEND_TO$(INDEX,4),KEY_4$(5,4)=AR1$(401,4),KEY_4$(9,6)=F$,KEY_4$=KEY_4$+K$; WRITE (Z[4],KEY=KEY_4$)
8430 NEXT INDEX
8445 REMOTE_TM_END:GOTO 9900
8500 CHECK_STOCK_INV:REM "Check RT0 info for each salesperson and add to SEND_TO$ those tracking stock inventory
8505 SEND_TO$=""; READ (Z[5],KEY="",DOM=8506)
8510 READ (Z[5],END=8540)RT0$
8515 IF LEN(RT0$)>=78 THEN IF RT0$(78,1)="Y" THEN SEND_TO$=SEND_TO$+RT0$(1,4)
8520 GOTO 8510
8545 CHECK_STOCK_INV_END:RETURN 
9000 REM "ERROR PROCESSING
9010 Y5=ERR,Y6=TCB(5); IF Y5=68 OR Y5=69 THEN GOTO 9500
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9120 ON Y8 GOTO 9900,0990,9920
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)<>"1" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; SETESC 9300; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9740 RETURN 
9750 REM "FILES - Use instead of ZZFLES
9755 Z[INDEX]=UNT
9760 IF LEN(FILE_NAME$)<>3 THEN GOTO 9780
9765 OPEN (Z[INDEX],ERR=9780)FILE_NAME$+X3$(9,3); GOTO 9781
9780 OPEN (Z[INDEX])FILE_NAME$
9790 RETURN 
9800 REM "EXIT PROGRAM
9900 REM "END PROGRAM
9910 CLOSE (Z[1]); CLOSE (Z[2]); CLOSE (Z[13]); CLOSE (Z[4]); IF Z[5]>0 THEN CLOSE (Z[5])
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
