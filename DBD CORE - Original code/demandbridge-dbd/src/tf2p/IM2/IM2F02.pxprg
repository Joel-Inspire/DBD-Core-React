0010 REM "Import Format Method - if >10 long then remove chars in option <I"+"M2F02>
0020 SETESC 9300; SETERR 9000
0035 REM "4.1 - 02/28/97 - 12.81 - dmm - SSP# 079309
0040 REM "Copyright 1997 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0069 REM "If longer than 10 after removing trailing spaces then remove any characters found in the OPTIONS string from the ORIGINAL field
0070 REM "If the first character is an R then work from right to left in checking characters and only remove enough to get it to 10, then stop
0080 REM "OPTION$ -> IF ='?' THEN return WHO AM I ELSE List of characters t"+"o remove from ORIGINAL$
0081 REM "ORIGINAL$ -> Original string to be formatted
0082 REM "FORMATTED$ -> Return string formatted properly
0083 REM "RETURN_CODE -> 0=ok
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,OPTION$,ORIGINAL$,FORMATTED$,FORMAT_ARRAY${ALL},RETURN_CODE
0100 SETERR 9000
0110 X0$="IM2F02",X1$="Import Format Method - Remove Filler Characters"
0200 REM "Initialization
0205 RETURN_CODE=0
0400 REM "Where to go
0405 IF OPTION$="?" THEN GOTO WHO_AM_I ELSE GOTO FORMAT_ORIGINAL
0600 WHO_AM_I:REM "Return in FORMATTED$ a description of this method
0610 FORMATTED$="Remove filler characters from field."
0695 WHO_AM_I_END:GOTO 9900
1000 FORMAT_ORIGINAL:REM " Format ORIGINAL$ TO FORMATTED$
1005 FORMATTED$=STP(ORIGINAL$,1); IF LEN(FORMATTED$)<=10 THEN GOTO 1095
1008 IF OPTION$(1,1)="R" THEN STEP=-1; OPTION$=OPTION$(2) ELSE STEP=1
1010 LIST$=STP(OPTION$,1)
1015 IF LIST$="" THEN GOTO 1095
1020 FOR I=1 TO LEN(LIST$)
1025 IF LEN(FORMATTED$)<=10 THEN EXITTO 1031 ELSE P=POS(LIST$(I,1)=FORMATTED$,STEP); IF P=0 THEN GOTO 1030 ELSE IF P=1 THEN FORMATTED$=FORMATTED$(2) ELSE IF P=LEN(FORMATTED$) THEN FORMATTED$=FORMATTED$(1,LEN(FORMATTED$)-1) ELSE FORMATTED$=FORMATTED$(1,P-1)+FORMATTED$(P+1) END_IF END_IF ; GOTO 1025
1030 NEXT I
1095 FORMAT_ORIGINAL_END:GOTO 9900
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9930 SETERR 9940; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
