0900 DIM A[30],B[20]
0990 PRINT @(10,13),"Customer:",@(33,13),"Item code:",@(33,15),"Location:",
0995 GOTO 3080
1000 REM "PROCESS IC0
1020 READ (Z[1],END=5000)IOL=0310
1025 PRINT @(20,13),A$(1,10),@(45,13),A$(11,10),
1150 READ (Z[2],KEY=A$(1,20),DOM=1151)
1200 READ (Z[2],END=3000)IOL=0320
1210 IF A$(1,20)<>B$(1,20) THEN GOTO 3000
1220 PRINT @(45,15),B$(21,4),
1320 Q=B[3]+B[4]-B[5]+B[6]
1340 IF Q=0 OR B[2]=0 THEN E=0 ELSE CALL "FM2EXT",13,0,A$(124,4),A[15],Q,B[2],E,0; P2=B[2],C1=C1+1
1360 Q1=Q1+Q,E1=E1+E
1390 GOTO 1200
3000 REM "ITEM CHANGE
3025 IF E1=0 THEN GOTO 3080
3029 REM "IF ONLY 1 WAREHOUSE JUST USE THE WAREHOUSE AVERAGE COST
3030 IF C1<=1 THEN P1=P2; GOTO 3040
3035 CALL "FM2EXT",13,1,A$(124,4),A[15],Q1,P1,E1,2
3040 EXTRACT (Z[1],KEY=A$(1,20))IOL=0310
3050 A[18]=P1
3060 WRITE (Z[1])IOL=0310
3062 IF RT$>"" THEN IF RT$(7,1)="H" THEN CUST$=A$(1,10); CALL "RT2WOC",ERR=3063,X3$,X4$,CUST$,"IC0...","U",A$(1,20)
3080 Q1=0,E1=0,C1=0,P2=0
3090 GOTO 1000
5000 REM "EOJ
5020 CALL "ZZPROM",".4",X3$,Z,"Process complete!!","","",0
5040 GOTO 9900
6000 REM "BACKGROUND
6005 PRINT (0,ERR=6016)'SB',
6020 PRINT @(0,4),"This program will process the Inventory Master File IC0 and for each item read location records in IC1.  The overall average cost will then be recomputed for all locations and if not zero replace the IC0 average cost."
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
