0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0100 SETERR 9000
0110 X0$="IC2UT8",X1$="I/C Item Sort Files Rebuild"
0120 DIM Z0$(80,"-")
0130 K0=20,K1=1
0135 C9=-1
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0300 REM "IOLISTS
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O IC0...  02O IC4...  03O IC5...  04O IC1...  05O IC6...  06O IC2...  07O ICD...  13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0600 REM "
0610 GOSUB 6000
0620 GOSUB 8100
0640 IF Q1$="" THEN CALL "ZZPROM",".Y",X3$,Z,"Proceed?","","",0; ON Z GOTO 0641,9900
0700 CALL "ZZINIT",STR(Z[2]:"00")+STR(Z[3]:"00")+STR(Z[5]:"00")+STR(Z[7]:"00")
1000 REM "Rebuild IC0 sorts
1020 T9=0; READ (Z[1],KEY="",DOM=1021)
1060 READ (Z[1],END=1200)A$
1080 C=C+1; IF MOD(C,T0)=1 THEN GOSUB 8150
1100 WRITE (Z[2],KEY=A$(82,14)+A$(61,3)+A$(1,20))
1120 WRITE (Z[3],KEY=A$(61,3)+A$(1,20))
1140 GOTO 1060
1200 REM "Rebuild IC1 sorts
1210 READ (Z[4],KEY="",DOM=1211)
1240 READ (Z[4],END=1400)A$
1250 C=C+1; IF MOD(C,T0)=1 THEN GOSUB 8150
1260 READ (Z[1],KEY=A$(1,20),DOM=1240)B$
1280 WRITE (Z[5],KEY=A$(21,4)+B$(61,3)+A$(1,20))
1300 GOTO 1240
1400 REM "Rebuild IC2 Sorts
1440 READ (Z[6],KEY="",DOM=1441)
1460 READ (Z[6],END=5000)A$
1480 C=C+1; IF MOD(C,T0)=1 THEN GOSUB 8150
1500 WRITE (Z[7],KEY=A$(21,10)+A$(31,24)+A$(1,20))
1520 GOTO 1460
5000 REM "EOJ
5010 C=T; GOSUB 8150
5020 IF Q1$="" THEN CALL "ZZPROM",".4",X3$,Z,"Process complete!!","","",0
5040 GOTO 9900
6000 REM "BACKGROUND
6005 PRINT (0,ERR=6016)'SB',
6020 PRINT @(0,4),"This DBI utility program will rebuild the Item Sort files",'LF',"IC4, IC5, IC6, ICD.",
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
8100 REM "GOSUB here, once, at the beginning, after the background is set and before the Proceed? question. Set T to total # to do (by calling ZZINFO) and T0 to the reporting interval (report every T0 number of records) this is typically 2% of total; This also prints a message (@8115),so adjust accordingly
8110 CALL "ZZINFO",Z[1],T9,X3$,T1,T0,K,B,D,S0,S1,F$
8111 CALL "ZZINFO",Z[4],T9,X3$,T4,T0,K,B,D,S0,S1,F$
8112 CALL "ZZINFO",Z[6],T9,X3$,T6,T0,K,B,D,S0,S1,F$
8114 T=T1+T4+T6
8115 PRINT @(0,7),"There are "+STR(T)+" records to process"
8130 T0=INT(T*.02); IF T0<=1 THEN T0=2
8145 RETURN 
8150 REM "Call this each time to update the bar graph. Display horiz. bar graph given total #, T and current #, C, and time counter T1 (T1 is init'ed here and used here, just don't use it somewhere else)
8155 IF Q1$<>"*" THEN CALL "ZZBARG",X3$,"HG",19,10,50,T1,T,C
8195 RETURN 
