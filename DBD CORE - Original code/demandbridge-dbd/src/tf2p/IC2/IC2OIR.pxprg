8490 GOTO 8220
8500 REM "Combine like lots
8510 CALL "ZZENTR","Y",A{ALL},OPT$,X4$,X3$,20,11,9,1,C0,"",X$,"","IC2OIR02","","",""
8540 GOTO 8220
