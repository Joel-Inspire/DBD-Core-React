0010 REM "Load prices & cost from inv <FE2DAI>
0020 SETESC 9300; SETERR 9000
0035 REM "3.6 - 03/15/93 - 15.24 - wmz
0040 REM "Copyright 1993 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0100 SETERR 9000
0110 ENTER A{ALL},E{ALL},I{ALL},L{ALL},S0,U0,C0$
0200 GOTO 5000
2000 REM "Figure costs for selling breaks
2005 H1=1
2007 IF H1=12 THEN GOTO 2010 ELSE IF E[H1+1]=0 THEN GOTO 2010 ELSE H1=H1+1; GOTO 2007
2010 FOR I=2 TO 6; GOSUB 2100; NEXT I
2090 RETURN 
2100 REM "Given selling break A(I) compute cost
2105 H2=2
2110 IF H2=H1+1 THEN H2=H1; GOTO 2120
2115 IF A[I]<E[H2] THEN H2=H2-1; GOTO 2120 ELSE H2=H2+1; GOTO 2110
2124 IF U0=0 THEN GOTO 2126
2125 A[I+17]=E[H2+12]*S0/U0
2130 IF A[I+5]<>0 THEN GOSUB 7600
2140 RETURN 
5100 REM "Default cost & prices for inventory items
5102 IF I[0]=0 THEN GOTO 5116 ELSE A[2]=I[14],A[12]=I[0]
5105 FOR I=1 TO 7 STEP 2
5107 IF I[I]=0 THEN EXITTO 5116 ELSE I0=INT(I/2)+3
5110 IF POS("S"=C0$)<>0 THEN A[I0]=I[I],A[I0+10]=I[I+1]
5115 NEXT I
5119 IF POS("C"=C0$)=0 THEN GOTO 5140
5120 FOR I=1 TO 24; E[I]=0; NEXT I
5122 IF L[0]=0 THEN GOTO 5136 ELSE E[1]=L[14],E[13]=L[0]
5124 FOR I=1 TO 11 STEP 2
5125 IF L[I]=0 THEN EXITTO 5136 ELSE I0=INT(I/2)+2
5130 E[I0]=L[I],E[I0+12]=L[I+1]
5135 NEXT I
5136 GOSUB 2000
5140 GOTO 9900
7600 REM "Refigure unit price based on desired g.p.
7605 PRECISION 14
7610 T9=1-A[I+5]/100
7611 IF T9=0 THEN T9=99.99
7619 PRECISION 2
7620 A[I+10]=A[I+17]/T9
7640 RETURN 
9000 REM "ERROR
9010 EXIT ERR
9900 REM "END PROGRAM
9950 EXIT 
9999 END 
