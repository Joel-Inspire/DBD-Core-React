0100 ENTER F,R0,R1$,R$
0400 IF R1$<>"**\INIT/**" THEN GOTO 1000
0410 R1$=""
0500 REM "STRIP HEADER"
0520 READ RECORD (F,END=4000)R2$
0540 P0=POS($000D$=R2$); IF P0=0 THEN GOTO 0600
0545 F$=FN%FID$(F); IF POS(F$(4,6)="GADIMSGADINVAPDLIA",6)>0 THEN P0=P0+2; GOTO 0560 ! [205703]-changed FID() to FN%FID$()
0550 P0=P0+POS($20$=R2$(P0+2))+1
0560 R1$=R2$(P0+1)
0580 GOTO 1000
0600 IF R2$(1,1)<>$0D$ THEN GOTO 0520
0620 P0=1+POS($20$=R2$(2))
0640 GOTO 0560
1000 REM "GET NEXT RECORD
1100 IF LEN(R1$)<R0 THEN READ RECORD (F,END=4000)R2$; R1$=R1$+R2$; GOTO 1100
1200 R$=R1$(1,R0),R1$=R1$(R0+1)
1220 IF POS(" "<>R$)=0 OR POS($00$<>R$)=0 THEN GOTO 1000
1300 GOTO 9900
4000 REM "EOJ"
4020 IF LEN(R1$)<R0 THEN GOTO 4100
4040 IF POS(" "<>R1$(1,R0))=0 THEN GOTO 4100
4060 IF POS($00$<>R1$(1,R0))=0 THEN GOTO 4100
4080 GOTO 1200
4100 R1$="**\EOJ/**"
4120 GOTO 9900
9900 EXIT 
