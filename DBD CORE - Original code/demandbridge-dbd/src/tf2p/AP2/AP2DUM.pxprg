0090 CLEAR ; SETERR 0100; ENTER X3$,X4$
0100 SETERR 9000
0110 X0$="AP2DUM",X1$="Copy AP invoice data for ODBC Access"
0120 DIM Z0$(80,"-")
0130 K0=20,K1=1,C=1
0135 C9=-1
0140 DIM Z1$(15," "),I[20]
0310 IOLIST K0,APE$,APE{ALL}
0311 IOLIST AYE$,AYE{ALL}
0390 IOLIST APD$,APD{ALL}
0391 IOLIST AYD$,AYD{ALL}
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="09O APD...  11O APE...  13O ZZPARM  19O AYD...  21O AYE...  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0600 READ (Z[13],KEY=X3$(9,3)+"A/P")P3$
0990 READ (Z[9],KEY="",DOM=*NEXT) ! Position to beginning of file, there could be a "" record so need to check that in 1000's
1000 READ_APD:
1005 INV$=KEY(Z[9],END=9900)
1006 IF INV$="" THEN READ (Z[9],KEY=INV$); GOTO 1005 ! If we have "" record then position to the next one
1010 DIM APD$(150),APD[14]; READ (Z[9],KEY=INV$,DOM=1011)IOL=0390; REM "Initial read from invoices file
1050 REM "UPDATE AYD FILE - COPY OF APD
1060 DIM AYD$(260),AYD[14]
1070 AYD$(1,26)=APD$(1,26)
1080 AYD$(30,120)=MID(APD$,27,120)
1090 AYD$(154,6)=X3$(178,6); REM "Audit control number
1100 AYD$(150,4)=X3$(174,4); REM "Batch number
1115 FOR I=0 TO 14; AYD[I]=APD[I]; NEXT I
1120 WRITE_SEQ$=STR(1:"000")
1125 AYD$(27,3)=WRITE_SEQ$
1130 WRITE (Z[19],KEY=AYD$(1,29),DOM=*NEXT)IOL=0391; GOTO READ_APE; REM " WRITE TO AYD
1131 IF WRITE_SEQ$="999" THEN ESCAPE ELSE WRITE_SEQ$=STR(NUM(WRITE_SEQ$)+1:"000")
1132 GOTO 1125
1199 ! 
1600 READ_APE:
1610 LINE$="000"
1640 IF APD[0]<=0 THEN GOTO DONE_APE ELSE K0=APD[0]
1650 DIM APE[3]; READ (Z[11],IND=K0)IOL=0310
1660 DIM AYE$(225); IF NUL(APE$) THEN APE$=DIM(38)
1665 AYE$(1,26)=APD$(1,26); AYE$(33)=APE$(1,37)
1666 AYE$(119,6)=X3$(178,6); REM "Audit control number
1667 AYE$(115,4)=X3$(174,4); REM "Batch number
1675 DIM AYE[3]; FOR I=0 TO 3; AYE[I]=APE[I]; NEXT I
1680 IF LINE$="999" THEN ESCAPE ELSE LINE$=STR(NUM(LINE$)+1:"000")
1685 AYE$(27,3)=WRITE_SEQ$; AYE$(30,3)=LINE$
1690 WRITE (Z[21],KEY=AYE$(1,32))IOL=0311
1720 IF K0>0 THEN GOTO 1650
1750 DONE_APE:
1799 ! 
5000 GOTO READ_APD
5099 ! 
9000 REM "Error Processing
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM "Transfer Control
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "Ctrl Logic
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "End Program
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 EXIT 
9999 END 
