0805 Z[3]=UNT; OPEN (Z[3],ISZ=512)STP(CA0$(5,20),1)
1000 REM "BEGIN MAIN PROCESS
1010 PRINT @(20,20),"Clearing existing entries...",
1015 READ (Z[2],KEY=CA0$(1,4),DOM=1016)
1020 K2$=KEY(Z[2],END=1025); IF K2$(1,4)<>CA0$(1,4) THEN GOTO 1025 ELSE REMOVE (Z[2],KEY=K2$,DOM=1020); GOTO 1020
1025 PRINT @(20,20),'CL',"Now loading fields: ",
1050 GOSUB 4000
1100 REM "Fill out CA1$ records
1110 FIELD_NO=0,START_POS=1
1115 FOR I=1 TO LEN(D0$)-L0+1 STEP L0
1116 PRINT @(40,20),'CL',D0$(I,19),
1120 DIM CA1$(43); CA1$(1,4)=CA0$(1,4),FIELD_NO=FIELD_NO+1; CA1$(5,3)=STR(FIELD_NO:"000")
1125 REC_LEN=NUM(D0$(I+19,3))
1130 CA1$(8,4)=STR(START_POS:"0000"),CA1$(12,4)=STR(REC_LEN:"0000"),CA1$(24,20)=D0$(I,19)
1140 START_POS=START_POS+REC_LEN
1180 WRITE (Z[2],KEY=CA1$(1,7))CA1$
1190 NEXT I
1600 GOTO 5000
4000 REM "DECIPHER FRONT END BLOCK
4002 T0$="",T1$=""
4003 REM "3,1 = NUMBER OF FIELDS???
4005 READ RECORD (Z[3],SIZ=512)T0$
4006 T1$=T0$(33),T0$=T0$(1,32)
4010 READ RECORD (Z[3],SIZ=512)X$; T1$=T1$+X$
4015 P=POS($0D$=T1$,32); IF P=0 THEN GOTO 4010 ELSE A$=T1$(P+1),T1$=T1$(1,P-1)
4100 REM "GET FIELDS
4105 L0=23
4120 FOR X=1 TO LEN(T1$) STEP 32
4130 T2$=T1$(X,32)
4135 DIM Q$(L0)
4140 Q$(1,16)=T2$(1,POS($00$=T2$(1,11)+$00$)-1)
4145 Q$(20,3)=STR(ASC(T2$(17,1)):"000")
4185 D0$=D0$+Q$,D0=D0+1
4186 R0=R0+ASC(T2$(17,1))
4190 NEXT X
4285 R0=R0+2
4286 IF A$(1,1)=$00$ THEN A$=A$(2)
4287 IF A$(1,1)=" " THEN A$=A$(2)
4295 RETURN 
5000 REM "EOJ
5020 IF Q1$="" THEN CALL "ZZPROM",".4",X3$,Z,"Process complete!!","","",0
5040 GOTO 9900
6000 REM "BACKGROUND
6005 PRINT (0,ERR=6016)'SB',
6020 PRINT @(0,4),"This TopForm utility program will clear and recreate CA1 records",@(0,5),"based on the information in the specified DBF file.",
6030 PRINT @(1,7),"Conversion file type to process:",
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
