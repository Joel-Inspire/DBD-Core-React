0510 Z$="01O CA0...  02O CA1...  13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0600 REM "
0610 GOSUB 6000
0625 DIM A$(4); IF Q1$<>"" THEN A$(1)=Q1$; GOTO 0635
0630 CALL "ZZENTR","SU",A{ALL},A$,X4$,X3$,34,7,1,4,C0,"","{1"+X$,"","CA2MAA00","CA0","CA2MAA",""; IF ABS(C0)>3 THEN PRINT @(0,3),'CE',; GOTO 9900
0631 PRINT @(34,7),A$(1,4),
0635 FIND (Z[1],KEY=A$(1,4),DOM=0630)CA0$
0636 IF CA0$(25,2)<>"DB" THEN CALL "ZZPROM",".4",X3$,Z,"This is not a DB type of file","","",0; GOTO 0630
0637 PRINT @(23,10),"File name: "+CA0$(5,20),
0640 IF Q1$="" THEN CALL "ZZPROM",".0",X3$,Z,"Proceed?","","",0; ON Z GOTO 0641,9900,0625
