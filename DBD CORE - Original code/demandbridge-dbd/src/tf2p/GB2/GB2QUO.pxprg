0010 REM "GB Quote Interface <GB2QUO>
0020 SETESC 9300; SETERR 9000
0035 REM "4.4 - 01/26/99 - 11.56 - kmc - SSP# 105031
0040 REM "Copyright 1999 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0050 REM "Returns PRICE, QUOTE$, and RESULT. RESULT=0 means no quote, =1 means price chosen
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,ORDER$,ORDER_DATE$,CUST$,PROD$,QTY,QUOTE$,PRICE,RESULT
0100 SETERR 9000
0105 QUOTE$="",PRICE=0,RESULT=0
0110 X0$="GB2QUO",X1$="Gold Bond Quote Interface"
0300 REM "IOLISTS
0310 IOLIST K0$,K1$,K2$,K3$,K4$,K5$,K[0],K[1],K[2],K[3],K[4],K[5],K[6],K[7],K[8],K[9],K[10],K6$,K7$,K8$,K[11],K[12],K[13],K[14],K[15],K[16],K[17],K[18],K[19],K[20],K[21],K[22],K[23],K[24],K[25],K[26],K[27],K[28]
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O E5  02O IC0... 13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0550 READ (Z[13],KEY=X3$(9,3)+"G/B",DOM=9900)GB$
1000 REM "BEGIN MAIN PROCESS
1010 GOSUB 8100
1020 DIM K[28]; READ (Z[1],KEY=CUST$+PROD$+W$,DOM=1021)IOL=0310; GOTO 1030
1025 IF CUST$(1,3)="ALL" THEN GOTO 1090 ELSE DIM CUST$(10); CUST$(1)="ALL"; GOTO 1020
1030 CALL "QD",CUST$,PROD$+W$,13
1040 GOSUB 8000
1080 IF RESULT=1 THEN GOSUB 2000; REM "If quote accepted then add special charge lines if needed
1095 GOTO 9900
2000 REM "Create special charge lines
2005 FOR II=1 TO 7
2007 ITEM_KEY$=GB$(7+II*10,10),P=POS("#"=ITEM_KEY$); IF P<>0 THEN ITEM_KEY$(P,1)=PROD$(1,1); REM "Replace # with department code from product
2010 FIND (Z[2],KEY=DIM(10)+ITEM_KEY$,DOM=2035)
2012 DIM LINE$(114),LINE[1]
2015 IF II<=2 THEN L_PRICE=K[II+1] ELSE L_PRICE=K[II+19]
2017 IF L_PRICE=0 THEN GOTO 2035 ELSE PRINT @(0,21),'CL',@(10,21),"Setting up charge line for charge "+STP(ITEM_KEY$,1)+" for "+STP(STR(L_PRICE:"$$$,$$$.00"),2),
2025 LINE$(28,1)="I",LINE$(39,10)=ITEM_KEY$,LINE[0]=L_PRICE
2030 CALL "GB2RTO",X3$,X4$,ORDER$,LINE$,LINE{ALL},"$N"
2035 NEXT II
2045 RETURN 
8000 REM "Check dates and figure price
8005 IF K6$="" OR K7$="" THEN GOTO 8034
8010 OLD_DATE$=K6$; GOSUB 8500; EFF_DATE$=DATE$; CALL "ZZDISP","DX",EFF_DATE$,"",X3$,EFF_DATE_DISPLAY$,"",0,0,X4$
8012 OLD_DATE$=K7$; GOSUB 8500; EXP_DATE$=DATE$; CALL "ZZDISP","DX",EXP_DATE$,"",X3$,EXP_DATE_DISPLAY$,"",0,0,X4$
8020 IF ORDER_DATE$<EFF_DATE$ THEN GOTO 8080 ELSE CALL "ZZDATE",X3$,"",ORDER_DATE$,EXP_DATE$,DAYS_BETWEEN,1,0,0,0,0,0,"","",""; IF DAYS_BETWEEN<-30 THEN GOTO 8085; REM " If more than 30 days over then reject based on expiration date
8034 IF QTY<K[4] THEN RESULT=0; GOTO 8062
8040 FOR TMP=4 TO 18 STEP 2
8041 IF TMP=10 THEN GOTO 8050; REM "Skip unused buckets
8045 IF K[TMP]=0 THEN EXITTO 8051 ELSE IF QTY>=K[TMP] THEN PRICE=K[TMP+1]
8050 NEXT TMP
8055 RESULT=1
8063 IF RESULT=0 THEN QUOTE$=""
8064 RETURN 
8080 CALL "ZZPROM",".4",X3$,Z,"QUOTE PRICE NOT USED - ORDER DATE BEFORE EFFECTIVE DATE "+EFF_DATE_DISPLAY$,"","",0; GOTO 8062
8085 CALL "ZZPROM",".4",X3$,Z,"QUOTE PRICE NOT USED - EXPIRED "+EXP_DATE_DISPLAY$,"","",0; GOTO 8062
8100 REM "Enter quote number (W/O#66013-4/15/96)
8110 INPUT @(0,22),'CE',@(10,22),"Enter Quote Number (or ?): ",W$,@(0,22),'CL',
8115 IF LEN(W$)>5 THEN GOTO 8110 ELSE IF W$="" THEN DIM W$(5); GOTO 8190
8116 IF W$="?" THEN GOTO 8200
8117 W$=STR(NUM(W$,ERR=8110):"00000"),QUOTE$=W$
8120 READ (Z[1],KEY=CUST$+PROD$+W$,DOM=8121); GOTO 8190
8125 DIM CUST$(10); CUST$(1)="ALL"; READ (Z[1],KEY=CUST$+PROD$+W$,DOM=8126); GOTO 8190
8130 PRINT @(0,22),'CE',@(10,22),"Quote Number ",W$," is not on file.  Re-enter quote number? (Y/N): ",; INPUT V$,@(0,22),'CL',
8140 IF POS(V$="Yy")>0 THEN GOTO 8100 ELSE IF POS(V$="Nn")=0 THEN GOTO 8130
8150 DIM W$(5)
8195 RETURN 
8200 REM "See if any quote exists
8205 X$=CUST$+PROD$
8210 READ (Z[1],KEY=X$,DOM=8211)
8220 W$=KEY(Z[1],END=8240)
8230 IF W$(1,LEN(X$))=X$ THEN W$=W$(21) ELSE GOTO 8240
8235 CALL "QF",CUST$,PROD$,QUOTE$,13; IF QUOTE$>"" THEN W$=QUOTE$; GOTO 8190 ELSE GOTO 8100
8240 PRINT @(0,22),'CE',"Sorry, no quotes exist for this customer and product number - CR to continue ",; INPUT *,@(0,22),'CL',
8250 GOTO 8100
8500 REM "Convert MMDDYY date OLD_DATE$ to DATE$ in TopForm Format
8501 REM " if date < 70 assume 2000's else 1900's
8505 DATE$=""; IF LEN(STP(OLD_DATE$,1))<6 THEN GOTO 8545 ELSE TMP$=STP(OLD_DATE$,1)
8510 DATE$=" "+TMP$(6,1)+TMP$(1,4)
8515 IF TMP$(5,2)>"69" THEN TMP$="19"+TMP$(5,2) ELSE TMP$="20"+TMP$(5,2)
8520 DATE$(1,1)=CHR(NUM(TMP$(1,3))-125)
8545 RETURN 
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
