0010 REM "Update Quote Information <GB2QUPL>
0020 SETESC 9300; SETERR 9000
0035 REM "4.4 - 01/26/99 - 11.57 - kmc - SSP# 106472
0040 REM "Copyright 1999 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0050 REM "Take QUOTE$ quote number and update sales dollar extension and cost dollar extension to the quote information
0051 REM "QUOTE$ is formatted as an 'A' or 'C' + 5 digit quote number or is only the 5 digit number (should not be happening from 1/12/99 on). A='ALL' quote, C=Customer number quote. If only 5 digits then try with Customer first then ALL
0052 REM "CUST$=customer #, PROD$=10 char item code
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,QUOTE$,CUST$,PROD$,SALE,COST,OPTION$
0100 SETERR 9000
0110 X0$="GB2QUPL",X1$="Update Quote Information"
0300 REM "IOLISTS
0310 IOLIST K0$,K1$,K2$,K3$,K4$,K5$,K[0],K[1],K[2],K[3],K[4],K[5],K[6],K[7],K[8],K[9],K[10],K6$,K7$,K8$,K[11],K[12],K[13],K[14],K[15],K[16],K[17],K[18],K[19],K[20],K[21],K[22],K[23],K[24],K[25],K[26],K[27],K[28]
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O E5 13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0600 REM "
1000 REM "BEGIN MAIN PROCESS
1005 DIM K[28]
1010 IF POS(QUOTE$(1,1)="AC")=0 THEN GOSUB 2000
1012 IF QUOTE$(1,1)="A" THEN QUOTE_KEY$="ALL"+DIM(7)+PROD$+QUOTE$(2) ELSE QUOTE_KEY$=CUST$+PROD$+QUOTE$(2)
1015 EXTRACT (Z[1],KEY=QUOTE_KEY$,DOM=9900)IOL=0310
1050 K[0]=K[0]+SALE,K[1]=K[1]+COST
1090 WRITE (Z[1],KEY=QUOTE_KEY$)IOL=0310
1995 GOTO 9900
2000 REM "A or C not specified so take 5 digit quote and try customer first, then ALL, if found prepend A or C as appropiate, then return. If not found leave
2005 FIND (Z[1],KEY=CUST$+PROD$+QUOTE$,DOM=2006); QUOTE$="C"+QUOTE$; GOTO 2040
2010 FIND (Z[1],KEY="ALL"+DIM(7)+PROD$+QUOTE$,DOM=9900); QUOTE$="A"+QUOTE$
2045 RETURN 
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
