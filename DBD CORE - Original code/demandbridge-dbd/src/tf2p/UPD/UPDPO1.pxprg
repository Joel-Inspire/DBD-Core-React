10555 CALL "UPDPO2;READBYKEY",PO2,0,PO1$(297,9),SEG2$,SEG3$,SEG4$,SEG5$,PO2$,PO2{ALL},FOUNDPO2
10560 CALL "UPDPO2;READNEXT",PO2,PO2$,PO2{ALL},FOUNDPO2; IF FOUNDPO2 THEN IF PO2$(82,9)<>PO1$(297,9) THEN FOUNDPO2=0
