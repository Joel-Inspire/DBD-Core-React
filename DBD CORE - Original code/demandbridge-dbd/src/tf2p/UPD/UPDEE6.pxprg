10300 DELETE_FAV_ITEM:
10310 ENTER FILENO,EE6$,EE6{ALL}
10315 DIM A$(256); DEL_OK=1; CALL "UPDEE6;READBYKEY",FILENO,0,EE6$(1,35),$0000$,SEG3$,SEG4$,SEG5$,A$,A{ALL},FOUNDEE6
10340 CALL "UPDEE6;READNEXT",FILENO,A$,A{ALL},FOUNDEE6
10350 WHILE FOUNDEE6
10351 IF A$(1,15)=EE6$(1,15) THEN IF A$(56,20)=EE6$(56,20) THEN CALL "UPDEE6;DELETE",FILENO,A$,A{ALL},FOUND,BUSY END_IF ELSE BREAK
10370 CALL "UPDEE6;READNEXT",FILENO,A$,A{ALL},FOUNDEE6
10380 WEND 
10381 DELETE_FAV_ITEM_END:
10390 EXIT 
