10000 DELETE_ALL:
10010 ENTER FILENO,BUYER_ID$,MOD_CD$,LIST_ID$
10015 DIM A$(256); DEL_OK=1; CALL "UPDEE6;READBYKEY",FILENO,0,BUYER_ID$,MOD_CD$,LIST_ID$,$0000$,SEG5$,A$,A{ALL},FOUNDEE6
10040 CALL "UPDEE6;READNEXT",FILENO,A$,A{ALL},FOUNDEE6
10050 WHILE FOUNDEE6
10051 IF A$(1,15)=BUYER_ID$ THEN CALL "UPDEE6;DELETE",FILENO,A$,A{ALL},FOUND,BUSY ELSE BREAK
10070 CALL "UPDEE6;READNEXT",FILENO,A$,A{ALL},FOUNDEE6
10080 WEND 
10081 DELETE_ALL_END:
10090 EXIT 
10099 ! 
10100 GET_BUYER_FIRST_ITEM:
10110 ENTER FILENO,BUYER_ID$,MOD_CD$,LIST_ID$,ITEM_KEY$,FOUND_ITEM
10120 CALL "UPDEE6;READBYKEY",FILENO,1,BUYER_ID$,MOD_CD$,LIST_ID$,$0000$,SEG5$,A$,A{ALL},FOUNDEE6
10130 CALL "UPDEE6;READNEXT",FILENO,A$,A{ALL},FOUNDEE6
10140 IF FOUNDEE6 AND A$(1,15)=BUYER_ID$ THEN ITEM_KEY$=PAD(A$(36,30),40),FOUND_ITEM=FOUNDEE6
10150 END_BUYER_FIRST_ITEM:
10160 EXIT 
10170 ! 
10200 GET_BUYER_LAST_ITEM:
10210 ENTER FILENO,BUYER_ID$,MOD_CD$,LIST_ID$,ITEM_KEY$,FOUND_ITEM
10220 CALL "UPDEE6;READBYKEY",FILENO,1,BUYER_ID$,MOD_CD$,LIST_ID$,$FFFF$,SEG5$,A$,A{ALL},FOUNDEE6
10230 CALL "UPDEE6;READPREV",FILENO,A$,A{ALL},FOUNDEE6
10240 IF FOUNDEE6 AND A$(1,15)=BUYER_ID$ THEN ITEM_KEY$=PAD(A$(36,30),40),FOUND_ITEM=FOUNDEE6
10250 END_BUYER_LAST_ITEM:
10260 EXIT 
