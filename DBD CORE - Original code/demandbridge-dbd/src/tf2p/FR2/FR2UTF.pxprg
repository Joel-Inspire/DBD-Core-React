0010 REM "Define F/R Data Files <FR2UTF>
0100 BEGIN 
0160 OPEN (6)"ZZPARM"
0220 PRINT 'CS'
0410 INPUT 'RB',"ENTER THE COMPANY CODE: ",C0$
0430 IF C0$="" THEN GOTO 9900
0510 READ (6,DOM=0400,KEY="CMP"+STR(NUM(C0$,ERR=0400):"000"))N1$
0520 OPEN (1)"ZZE"
0990 F0$="FR0FR1FR2FR3FR4FR5FR6FRCFRIFRPFRZ"
1020 FOR X=1 TO LEN(F0$) STEP 3
1030 F9$=F0$(X,3)
1040 CLOSE (14); OPEN (14,ERR=1200)F9$
1050 GOTO 1800
1200 REM "DEFINE W/ COMPANY CODE
1220 F9$=F9$+N1$(4,3)
1225 CLOSE (14); OPEN (14,ERR=1226)F9$; GOTO 1800
1235 PRINT "DEFINING FILE ",F9$
1240 READ (1,KEY=F9$(1,3)+"   ")A$
1245 K=NUM(A$(48,2)),B=NUM(A$(50,4))
1260 IF K=0 THEN INDEXED F9$,20,B,0,0; CLOSE (14); OPEN (14)F9$; CALL "ZZINIT","14"; GOTO 1800
1270 IF B=0 THEN SORT F9$,K,20,0,0; GOTO 1800
1280 DIRECT F9$,K,20,B,0,0; GOTO 1800
1840 NEXT X
1900 REM 
1920 INPUT 'RB',"FINISHED: ",*
9940 RUN "ZMENU"
