0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,CUST_CODE$,OF3$,OF3{ALL},ERR_CODE$,HOLD$
0098 REM "Called from OF2UAA
0099 REM "Called from OF2UBA
0100 SETERR 9000
0110 X0$="OF2UZA",X1$="Validate Shipping Record for GOE"
0120 DIM Z0$(80,"-"),FILL_SP$(80)
0135 C9=-1
0200 REM "
0240 REM "SHOULD ALREADY HAVE X3$, ETC ->CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2; IF X1>0 THEN GOTO 09920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0295 DIM Z0$(80,X3$(235,1)); Z0$=ESC+"BG"+Z0$+ESC+"EG"
0300 REM "Iolist
0350 IOLIST FMPD$; REM "FMP-"D"
0360 IOLIST AR1$,AR1[0],AR1[1],AR1[2],AR1[3],AR1[4],AR1[5],AR1[6],AR1[7],AR1[8],AR1[9],AR1[10],AR1[11],AR1[12],AR1[13],AR1[14],AR1[15]
0380 IOLIST OF7$
0390 IOLIST FM4$,FM4[0],FM4[1],FM4[2],FM4[3],FM4[4],FM4[5],FM4[6],FM4[7],FM4[8],FM4[9],FM4[10],FM4[11],FM4[13],FM4[14],FM4[15]
0430 IOLIST ZZPARM_UM$,ZZPARM_UM[0],ZZPARM_UM[1]; REM "ZZPARM-U/M record
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="13O ZZPARM  15O FMP...  16O AR1...  17O FM0...  18O FO5...  19O FM"+"4...  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0550 READ (Z[13],KEY=X3$(9,3)+"F/M")PARMFM$
1000 REM "Read Customer/Parameters
1010 CUST_IN$=CUST_CODE$; GOSUB 7200; CUST_CODE$=CUST_OUT$
1015 ADDR_IN$=OF3$(78,88),NAME_IN$=OF3$(234,35)
1020 GOSUB 7900
1030 GOSUB 1150; OF3$(78,88)=ADDR_OUT$,OF3$(234,35)=NAME_OUT$; IF STP(ADDR_IN$,3," ")<>"" THEN OF3$(78,88)=ADDR_IN$ END_IF ; IF STP(NAME_IN$,3," ")<>"" THEN OF3$(234,35)=NAME_IN$
1040 GOSUB 1200
1090 REM "Set error flag
1092 OF3$(277,1)=ERR_CODE$
1099 GOTO 9900
1150 REM "Location blank /check manual ship-to info or default
1155 IF STP(OF3$(15,4),1)="" OR STP(OF3$(15,4),1)="M" THEN GOSUB 7950; IF STP(OF3$(15,4),3," ")="" OR STP(OF3$(15,4),1)="M" THEN GOTO 1199
1160 IF OF3$(14,1)="C" THEN FM0KEY$=OF3$(14,1)+CUST_CODE$ ELSE FM0KEY$=OF3$(14,1)+FILL_SP$(1,10)
1165 READ (Z[17],KEY=FM0KEY$+OF3$(15,4),DOM=1170); GOTO 1195
1170 IF ERR_CODE$="1" THEN ERR_CODE$="3" ELSE ERR_CODE$="2",HOLD$="Y"; REM "DOM, location code not in FM0
1199 RETURN 
1200 REM "Unit of Measure
1205 DIM ZZPARM_UM$(22),ZZPARM_UM[2]; READ (Z[13],KEY="U/M"+OF3$(273,4),DOM=1206)IOL=0430; REM "Read for U/M info
1210 IF ZZPARM_UM$(20,1)="Y" THEN OF3[0]=ZZPARM_UM[0]; REM "If fixed U/M, use qty per U/M from ZZPARM
1249 RETURN 
1600 REM "Check location req maximum, if over put on hold
1601 REM "***** activate *****
1620 IF PARMFM$(240,1)="Y" THEN IF ERR_CODE$=" " THEN IF POS(OF2$(13,1)="CX")<>0 THEN J2$="?"+CUST_CODE$+OF2$(25,10)+"C"+SHIPTO_CODE$; CALL "FS2DAH",X3$,J2$,OF2[3]*OF2[0],Z; IF Z=1 THEN ERR_CODE$="J",HOLD$="Y"
1625 IF OF2[3]>0 AND LIMIT>0 AND ERR_CODE$=" " THEN GOSUB 8500; REM "Check FM4 avg usage against limit
1649 RETURN 
7200 REM "Validate customer number
7205 DIM AR1$(200),AR1[15]
7210 CUST_OUT$=PAD(STP(CUST_IN$,1),10,"0")
7220 READ (Z[16],KEY=CUST_OUT$,DOM=7221)IOL=0360; GOTO 7250
7230 CUST_OUT$=CUST_IN$
7240 READ (Z[16],KEY=CUST_OUT$,DOM=7241)IOL=0360
7250 IF STP(AR1$,1)="" THEN ERR_CODE$="1"
7299 RETURN 
7900 REM "Read customer parameters
7905 DIM OF7$(76)
7910 READ (Z[18],KEY=CUST_CODE$,DOM=7911)IOL=0380
7920 IF STP(OF7$(11,10),3," ")="" THEN ALT_INV=0 ELSE ALT_INV=1; REM "Alt. inv. cust code?
7930 IF OF7$(74,1)="Y" THEN HOLD$="Y"; REM "Review reqs?
7940 LIMIT=0; LIMIT=NUM(OF7$(71,3),ERR=7941); REM "Set % of mthly avg as limit
7945 RETURN 
7950 REM "Blank location, manual ship-to?
7955 DIM FMP_D$(242)
7960 READ (Z[15],KEY="D"+CUST_CODE$,DOM=7961)IOL=0350
7962 IF STP(OF3$(15,4),1)<>"M" THEN GOTO 7975
7965 IF FMP_D$(24,1)="Y" THEN IF ERR_CODE$="1" THEN ERR_CODE$="D"; GOTO 7999 ELSE ERR_CODE$="C",HOLD$="Y"; GOTO 7999; REM "FMS customer, manual ship-to not allowed, error/hold
7970 IF STP(ADDR_IN$,3," ")="" THEN GOTO 7971 ELSE ADDR_OUT$=ADDR_IN$,NAME_OUT$=NAME_IN$; GOTO 7999; REM "If manual ship-to addr blank; look for default
7975 IF FMP_D$(125,4)<>"    " THEN OF3$(15,4)=FMP_D$(125,4); GOTO 7999; REM "Found a default ship-to
7980 IF STP(AR1$(56,87),3," ")="" THEN IF ERR_CODE$="1" THEN ERR_CODE$="F"; GOTO 7999 ELSE ERR_CODE$="E",HOLD$="Y"; GOTO 7999; REM "No default ship-to & AR1 addr blank, error/hold
7985 ADDR_OUT$=AR1$(56,87); REM "Using address info from AR1 as manual ship-to info
7999 RETURN 
8500 REM "Read FM4 for monthly avg usage for limit
8501 REM "***** activate *****
8510 DIM FM4$(100),FM4[16]
8520 FIND (Z[19],KEY=CUST_CODE$+OF2$(25,10)+SHIPTO_CODE$,DOM=8521)IOL=0390
8530 IF FM4[0]>0 THEN IF OF2[3]>LIMIT*FM4[0]/100 THEN ERR_CODE$="B",HOLD$="Y"
8599 RETURN 
8900 REM "Define Functions
8910 DEF FNS$(Z9$)=Z9$(1,POS("     "=Z9$+"      ")-1)
9000 REM "Error Processing
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM "Transfer control
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9900 REM "End program
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
