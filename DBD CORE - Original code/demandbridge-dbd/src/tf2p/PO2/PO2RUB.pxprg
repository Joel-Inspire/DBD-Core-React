0050 REM "Removes Sales order records for B,S type orders.  Called by P/O line removal and P/O header removal.  NOTE: PO3 & PO5 handled by PO2RUA
0090 CLEAR ; SETERR 0100; ENTER X3$,T$,F$
0100 SETERR 9000
0110 X0$="PO2RUB"
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O FS2...  02O FS4...  03O FS5...  04O FSO...  05O FSV...  06O FS1...  07O PO1...  08O FMN...  09O SH8...  10O SH9...  11O FT6...  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0900 IF T$="H" THEN GOTO 2000
1000 REM "Line sorts
1010 P$=F$(82,8)+F$(7,3)
1020 READ (Z[1],KEY=P$,DOM=1061)A$
1040 REMOVE (Z[3],KEY=F$(91,20)+A$(10,4)+P$,DOM=1041)
1060 REMOVE (Z[1],KEY=P$,DOM=1061)
1070 CALL "PO2RUC",X3$,"H",F$,0; REM "SSP125059, fix up buckets 6 & 7 of FS1
1900 GOTO 9900
2000 REM "Header sorts
2005 P$=F$(306,8)
2009 REM "Make sure there are no other P/O's on this order
2010 READ (Z[7],KEY=P$,DOM=2011)
2015 K$=KEY(Z[7],END=2016); IF K$(1,LEN(P$))=P$ THEN GOTO 2190
2018 DIM FS1$(606); FIND (Z[6],KEY=P$,DOM=*NEXT)FS1$(1); IF POS(FS1$(184,1)="YO")>0 THEN FIND (Z[8],KEY=P$,DOM=*NEXT)FMN$; WRITE (Z[11],KEY=P$)FMN$ ! SSP272336, if repeat order and order notepad exists then write to FT6 before removals
2020 REMOVE (Z[6],KEY=P$,DOM=2021)
2025 GOSUB 8400 ! Remove SH8 records if any for this order
2040 REMOVE (Z[5],KEY=P$,DOM=2041)
2060 REMOVE (Z[2],KEY=F$(179,10)+P$,DOM=2061)
2080 REMOVE (Z[4],KEY=F$(179,10)+F$(328,15)+P$,DOM=2081)
2100 REMOVE (Z[8],KEY=P$,DOM=2101)
2190 GOTO 9900
8400 REM "Remove SH8 records if FS1 removed - SSP165004, WO124784, didn't add logic here so B-Types in SH8 never going away.
8405 CALL "UPDSH9;DELETE_ORDER_ENTRIES",Z[10],P$
8410 READ (Z[9],KEY=P$,DOM=8411)
8415 SH8_KEY$=KEY(Z[9],END=8445)
8420 IF SH8_KEY$(1,8)<>P$ THEN GOTO 8445
8425 REMOVE (Z[9],KEY=SH8_KEY$,DOM=8415)
8430 GOTO 8415
8445 RETURN 
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9900 REM "END PROGRAM
9905 PRINT @(0,22),'CL',
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; EXIT 
9940 SETESC 9350
9950 IF %GUI THEN EXIT ELSE RUN "ZMENU"
9999 END 
