0100 CLEAR 
0110 PRINT 'CS'
0405 F9=14
1000 REM 
1005 X2=-1; CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2
1010 CLOSE (14); OPEN (14)"ZZPARM"
1015 CALL "FX2SBC",X3$,14,P$,X9
1050 CALL "FX2MBA",PGN
1200 REM 
1220 INPUT 'RB',"Enter the request number: ",Q$
1225 R0$=Q$; IF R0$="" THEN GOTO 9900
1260 REM IF P$(695,1)>="3" THEN S0$=STP(P$(697,30),1)+"/bin/vfxstat -U vsifax "+R0$ ELSE S0$="/usr/vsifax/bin/exreq "+R0$
1265 IF P$(695,1)>="3" THEN CALL "ZZ2CMD",X3$,X4$,"{VF_STAT_REQ_3}",R0$+SEP+STP(P$(697,30),1),"R",RETURN_CODE,S1$ ELSE CALL "ZZ2CMD",X3$,X4$,"{VF_STAT_REQ_2}",R0$,"R",RETURN_CODE,S1$
1400 REM "DISPLAY
1405 X0=0,L=3
1410 PRINT 'CS'
1420 P=POS(SEP=S1$); IF P=0 THEN GOTO 1500
1425 PRINT @(X0,L),S1$(1,P-1); S1$=S1$(P+1),L=L+1
1430 IF L>16 THEN X0=44,L=3
1440 GOTO 1420
1500 REM 
1520 INPUT @(12,22),"Do you wish to cancel this request? (YES/No): ",Q$
1530 IF Q$="N" OR Q$="No" OR Q$="NO" THEN GOTO 0010
1532 IF Q$<>"YES" THEN GOTO 1520
1550 REM "CANCEL
1560 REM IF P$(695,1)>="3" THEN S0$=STP(P$(697,30),1)+"/bin/vfxcancel -U vsifax "+R0$ ELSE S0$="/usr/vsifax/bin/fxcancel "+R0$
1561 IF P$(695,1)>="3" THEN CALL "ZZ2CMD",X3$,X4$,"{VF_CANCEL_FAX_3}",SEP+R0$+SEP+STP(P$(697,30),1),"",RETURN_CODE,RETURN$ ELSE CALL "ZZ2CMD",X3$,X4$,"{VF_CANCEL_FAX_2}",R0$,"",RETURN_CODE,RETURN$
1565 REM INVOKE S0$,ERR=1566
1590 GOTO 9900
9920 SETERR 9940; EXIT 
9940 RUN "ZMENU"
9999 END 
