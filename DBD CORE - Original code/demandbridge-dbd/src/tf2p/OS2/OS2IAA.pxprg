0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0095 F$="CALLED",FF$=F$
0100 SETERR 9000
0110 X0$="OS2IAA",X1$="Text Invoice Update - Office Supplies"
0120 DIM Z0$(80,"-")
0130 K0=20,K1=1
0135 C9=-1
0200 REM "
0240 IF X3$="" THEN CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0300 REM "IOLISTS
0320 IOLIST OS0$
0321 IOLIST OS1$
0322 IOLIST OS5$,OS5[0],OS5[1]
0400 REM "
0410 DIM OS5$(65),OS5[2]
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="02O OS0...  03O OS1...  04O OS5...  13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0550 DIM M6[1]; CALL "IC2PRE",X3$,Z[13],"",M6{ALL},"",0,"",0
0560 IF FF$="CALLED" THEN GOSUB 8100; GOTO 0700
0585 RT$=""; CALL "RT2PRM",ERR=0586,X3$,X4$,RT$
0600 REM "
0610 GOSUB 6000
0620 GOSUB 8100
0640 CALL "ZZPROM",".Y",X3$,Z,"Proceed?","","",0; ON Z GOTO 0641,9900
0700 I$=Q0$
1000 REM "
1010 GOSUB 4000; REM " LOAD THE OS5 ARRAY
1040 OS0_KEY$=KEY(Z[2],END=5000)
1050 READ (Z[2],KEY=OS0_KEY$)IOL=0320
1055 FOR X=0 TO 9
1056 IF LEN(OS5_ARRAY$)>X*27+1 THEN OS5$=OS5_ARRAY$(X*27+1,27) ELSE X=9
1075 DIM OS1$(256); READ (Z[3],KEY=OS0$(1,10)+OS5$(1,4),DOM=1076)IOL=0321; GOTO 1200
1080 OS1$=OS0$(1,10)+OS5$(1,4)+OS0$(204,10)+OS5$(16,12)+STR(1:"##########")+DIM(205)
1200 REM " FOUND THE RECORD SO UPDATE ONLY PRICE
1210 BASE_PRICE=NUM(OS0$(204,10))
1211 COST=NUM(OS0$(578,10))
1215 RATE=NUM(OS5$(6,10))/100
1220 IF OS5$(5,1)="M" THEN ADJUSTMENT=COST*RATE
1230 IF OS5$(5,1)="D" THEN ADJUSTMENT=BASE_PRICE*RATE
1231 IF OS5$(5,1)="M" THEN PRICE=COST+ADJUSTMENT
1232 IF OS5$(5,1)="D" THEN PRICE=PRICE-ADJUSTMENT
1234 IF OS5$(5,1)="G" THEN PRICE=COST*100/100-RATE
1240 OS1$(47,10)=STR(PRICE:"#######.00")
1250 WRITE (Z[3],KEY=OS1$(1,14))IOL=0321
1251 BASE_PRICE=0,COST=0,RATE=0,PRICE=0
1260 NEXT X
2000 GOTO 1040
4000 REM "LOAD THE OS5 ARRAY
4010 OS5_ARRAY$=""
4060 READ (Z[4],KEY="",DOM=4061)
4061 OS5_KEY$=KEY(Z[4],END=4199)
4065 READ (Z[4],KEY=OS5_KEY$)IOL=0322
4067 IF OS5$(37,1)<>"L" THEN GOTO 4061; REM " PRICE NOT LOADED FROM TAPE
4068 IF OS5$(35,1)="C" THEN GOTO 4061; REM " CONTRACT PRICE
4070 OS5_ARRAY$=OS5_ARRAY$+OS5$(1,4)+OS5$(35,1)+STR(OS5[0]:"#######.00")+OS5$(38,12)
4080 GOTO 4061
4199 RETURN 
5000 REM "EOJ"
5030 CALL "ZZPROM",".4",X3$,Z,"Process complete!!","","",0
5040 GOTO 9900
6000 REM "BACKGROUND
6005 PRINT (0,ERR=6016)'SB',
6020 PRINT @(0,4),"This program will read through the Office Supply Inventory File (OS0) and create a new OS1 record for each Pricing Matrix record in the OS5 file.  If the Pricing Matrix Record indicates the price is for a contract price or for an item that has not been loaded from a tape, it will be skipped."
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
8100 REM "GOSUB here, once, at the beginning, after the background is set and before the Proceed? question. Set T to total # to do (by calling ZZINFO) and T0 to the reporting interval (report every T0 number of records) this is typically 2% of total; This also prints a message (@8115),so adjust accordingly
8110 CALL "ZZINFO",Z[2],T9,X3$,T,T0,K,B,D,S0,S1,F$
8115 REM IF I$="" THEN PRINT @(0,9),"There are "+STR(T)+" records to process"
8130 T0=INT(T*.02); IF T0<=1 THEN T0=2
8145 RETURN 
8150 REM "Call this each time to update the bar graph. Display horiz. bar graph given total #, T and current #, C, and time counter T1 (T1 is init'ed here and used here, just don't use it somewhere else)
8151 REM "line reset to 21 from 19 for ssp#089855 cwj 7/15/98
8155 CALL "ZZBARG",X3$,"HG",21,10,50,T1,T,C
8195 RETURN 
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
