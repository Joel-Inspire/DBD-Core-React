5960 E$=K9$+K1$(1,K0); CALL "ZZKEYP",ERR=5965,0+F0,E$
5965 IF E$>"" THEN IF E$(1,K9)=K9$ THEN IF E$(K9+1,LEN(K0$))>=K0$ THEN GOTO 5990
5985 GOSUB 6200; RETURN 
