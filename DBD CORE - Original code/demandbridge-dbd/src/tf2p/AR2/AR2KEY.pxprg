2020 GOSUB 8200; IF C0=-1 THEN GOTO 2100
2060 IF C0=2 THEN IF K0$="" THEN PRINT 'RB',; GOTO 2010 ELSE K0$=K0$(1,LEN(K0$)-1); GOSUB 5900; GOTO 2010
2065 IF C0=1 THEN K$=K5$; GOTO 9900
