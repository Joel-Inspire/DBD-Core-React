6048 K1$=K1$+Q$,K6$=K6$+K$,K6=LEN(K$)
6050 PRINT @(2+S0,1+X+S1),Q$+S$(1,LEN(Q$)-K0),
6090 GOTO 6140
6110 IF X=0 THEN X=S2-3; GOTO 6140
6115 E9=1,F1$(1)=""; GOSUB 6620
6120 Q$=S$(1,K0); GOTO 6050
6140 NEXT X
