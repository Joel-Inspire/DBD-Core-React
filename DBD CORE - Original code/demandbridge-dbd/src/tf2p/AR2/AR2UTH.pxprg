0010 REM "Generate Open Invoice G/L <AR2UTH>
0015 REM "BFS Conversion
0020 SETESC 9300; SETERR 9000
0035 REM "4.1 - 02/08/97 - 23.52 - kmc
0040 REM "Copyright 1997 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0100 SETERR 9000
0110 X0$="AR2UTH",X1$="A/R Generate Open Invoice G/L"
0120 DIM Z0$(80,"-"),Z1$(20,"0")
0130 K0=20,K1=1
0135 C9=-1
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0300 REM "IOLISTS
0310 IOLIST A$,A[0],A[1],A[2],A[3],A[4],A[5],A[6],A[7],A[8],A[9],A[10],A[11],A[12],A[13],A[14]
0320 IOLIST B0,B$,B[0],B[1],B[2],B[3],B[4],B[5],B[6],B[7],B[8],B[9],B[10],B[11]
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01L AR6...  02O ARO...  13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0585 W9$=""; CALL "RT2PRM",ERR=0586,X3$,X4$,W9$
0600 REM "
0610 GOSUB 6000
0640 IF Q1$="" THEN CALL "ZZPROM",".Y",X3$,Z,"Proceed?","","",0; ON Z GOTO 0641,9900
0650 DIM A[14],B[11]
0700 IF X3$(9,3)<>"122" THEN GOTO 9900 ELSE CALL "ZZINIT",STR(Z[2]:"00")
0710 EXTRACT (Z[1],END=0800)IOL=0310
0715 PRINT @(10,22),A$(1,18),
0720 A[0]=0
0730 WRITE (Z[1])IOL=0310
0731 IF W9$<>"" THEN CUST$=A$(1,10); CALL "RT2WOC",ERR=0732,CUST$,"AR6...","U",A$(1,18)
0740 GOTO 0710
0800 REM 
0950 PRINT @(20,10),'CE',
0990 READ (Z[1],KEY="",DOM=0991)
1000 K$=KEY(Z[1],END=5000)
1010 READ (Z[1],KEY=K$)IOL=0310
1012 PRINT @(30,11),A$(1,10),"-",A$(11,10),
1080 B0=A[0],T=0,B1=0
1100 REM "Add transactions
1120 IF B0<=0 THEN GOTO 1400
1130 B1=B0
1140 READ (Z[2],IND=B1)IOL=0320
1160 T=T+B[3]
1180 GOTO 1120
1400 REM 
1420 IF A[9]=T THEN GOTO 1000
1440 F=Z[2]; GOSUB 7700
1450 IF B1=0 THEN A[0]=A9; WRITE (Z[1],KEY=K$)IOL=0310; GOTO 1500
1460 READ (F,IND=B1)IOL=0320
1480 B0=A9; WRITE (F,IND=B1)IOL=0320
1500 DIM B$(60),B[11]
1520 B$(1,18)=A$(1,18),B$(21,1)="A",B$(22,6)=A$(20,6),B$(28,6)=A$(127,6),B$(34,6)="000000",B$(40,12)="003011"+Z1$,B[3]=T-A[9]
1540 B0=0; WRITE (F,IND=A9)IOL=0320
1990 GOTO 1000
5000 REM "EOJ
5020 IF Q1$="" THEN CALL "ZZPROM",".4",X3$,Z,"Process complete!!","","",0
5040 GOTO 9900
6000 REM "BACKGROUND
6005 PRINT (0,ERR=6016)'SB',
6020 PRINT @(0,4),"This CSI utility program will process the Customer Open Invoice file and generate a G/L cash basis posting whenever the net sale <> previous postings.  A generated transaction will use the date of the invoice as the posting date, the original fy/ap as the g/l fy/ap, 'A' as the type and zeros in the audit control number.  NOTE: Presently done for BFS conversion.  Will zero out AR6 link and clear ARO before proceeding."
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
7700 REM "GET NEXT INDEX TO FILE IN A9
7702 DIM Y[4]
7705 IOLIST Y[0],Y[1],Y[2],Y[3],Y[4]
7710 EXTRACT (F,IND=0,ERR=7800)IOL=7705
7720 IF Y[4]=-2 THEN READ (F); GOTO 7790
7730 IF Y[0]>=Y[3] OR Y[2]>=Y[3] THEN GOTO 9000 ELSE Y[4]=-2
7740 WRITE (F,IND=0)IOL=7705
7750 IF Y[1]<1 THEN A9=Y[2],Y[2]=Y[2]+1 ELSE A9=Y[1]; READ (F,IND=A9)Y[1]
7760 Y[0]=Y[0]+1,Y[4]=-1
7770 WRITE (F,IND=0)IOL=7705
7780 RETURN 
7790 LOCK (F,ERR=7710); Y[4]=-1; GOTO 7730
7800 IF ERR<>0 THEN GOTO 9000 ELSE RETRY 
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
