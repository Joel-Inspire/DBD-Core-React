1100 REM "CHANGE FOR BANK-N-BUSINESS
1120 IF POS(X3$(9,3)="094",3)>0 THEN Q=0; FOR X=1 TO LEN(R0$) STEP R0; Q=Q+R[INT(X/R0)+1]; NEXT X; T0=Q
