2000 REM "DO EACH ACCOUNT
2005 T=T0
2010 FOR X=1 TO LEN(R0$) STEP R0
2015 Q=INT(X/R0)+1
2020 T2=0; IF R[0]<>0 THEN T2=R[Q]*T0/R[0]
2025 IF X=LEN(R0$)-R0+1 THEN T2=T
2030 T=T-T2
2050 REM 
2060 W8=1,F5$="DEPT "+R0$(X,R0); GOSUB 7300
2070 W8=21,F5$=STR(T2:M0$); GOSUB 7300
2095 W9=W9+1
2180 NEXT X
3000 REM 
3050 GOTO 9900
5000 REM "END
6100 REM "HEADINGS
6120 W8=4,F5$="** SUB A/C SUMMARY **"; GOSUB 7300
6180 W9=W9+1
6190 RETURN 
7300 REM "SET STRING F5$ INTO P$
7310 P$(W9*W3+S0+W8,LEN(F5$))=F5$
7340 RETURN 
