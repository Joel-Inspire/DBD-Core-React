1010 REM "S0=START POS, S1=START LINE
1011 REM "P$ IS PRINT STRING, W3 IS LINE WIDTH
1012 REM "R0$ IS STRING OF ACCOUNTS, T0 IS INVOICE GROSS TOTAL
1013 REM "R0 IS LENGTH OF EACH ELEMENT IN R0$
1020 ENTER X3$,X4$,W3,S0,S1,P$,W9,R0$,R0,R{ALL},T0
1030 W9=S1,T1=0
1035 M0$="##,###.00-"
