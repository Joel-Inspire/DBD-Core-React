0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0100 SETERR 9000
0110 X0$="AR2UTR",X1$="Get A/R & A/P Statistics"
0120 DIM Z0$(80,"-"),Z1$(20,"0"),A[15]
0165 DEF FND$(Z9$)=Z9$(NUM(X3$(48,1))*2+1,2)+X3$(59,1)+Z9$(7-NUM(X3$(48,1))*2,2)+X3$(59,1)+STR((ASC(Z9$(1,1))-65)*10+1900+NUM(Z9$(2,1))-1570*POS("  "=Z9$(1,2)):"####")
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0299 CALL "ZZDAPP",X3$,"!AKS2GETKS2CVTKS2MAPZZCASE"
0300 REM "IOLISTS
0310 IOLIST A$,A[0],A[1],A[2],A[3],A[4],A[5],A[6],A[7],A[8],A[9],A[10],A[11],A[12],A[13],A[14],A[15]
0320 IOLIST B$,B[0],B[1],B[2],B[3],B[4],B[5],B[6],B[7],B[8],B[9],B[10],B[11],B[12],B[13],B[14],B[15]
0330 IOLIST C$,C[0],C[1],C[2],C[3],C[4],C[5],C[6],C[7],C[8],C[9],C[10],C[11],C[12],C[13],C[14],C[15]
0340 IOLIST D$,D[0],D[1],D[2]
0390 IOLIST I$,I[X,0],I[X,1],I[X,2],I[X,3],I[X,4],I[X,5],I[X,6],I[X,7],I[X,8],I[X,9],I[X,10],I[X,11],I[X,12],I[X,13],I[X,14],I[X,15],I[X,16],I[X,17],I[X,18],I[X,19],I[X,20],I[X,21],I[X,22],I[X,23],I[X,24]
0395 IOLIST K$,K[0],K[1],K[2],K[3],K[4],K[5],K[6],K[7],K[8],K[9],K[10],K[11],K[12],K[13],K[14]
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O AR9XXX  02O AR9...  03O AP9XXX  04O AP9...  05O AR1...  06O AP4...  13O ZZPARM "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0580 READ (Z[13],KEY="STATA/R")F5$
0583 READ (Z[13],KEY="STATA/P")F6$
0585 RT_PARM$=""; CALL "RT2PRM",ERR=0586,X3$,X4$,RT_PARM$
0600 REM "
0610 GOSUB 6000
0620 GOSUB 8100
0640 CALL "ZZPROM",".Y",X3$,Z,"Proceed?","","",0; ON Z GOTO 0641,9900
1000 REM "Do A/R Stats, the A/P stats
1010 F1=Z[1],F2=Z[2],F3=Z[5],F7$=F5$
1020 GOSUB 2000
1030 F1=Z[3],F2=Z[4],F3=Z[6],F7$=F6$
1040 GOSUB 2000
1090 GOTO 5000
2000 REM "Transfer from file F1 to F2 for records matching in F3
2005 READ (F1,KEY="",DOM=2006)
2010 K$=KEY(F1,END=2090)
2020 READ RECORD (F1,KEY=K$)A$
2025 C=C+1; IF MOD(C,T0)=1 THEN GOSUB 8150
2026 IF A$(11,4)>="1994" THEN GOTO 2010; REM "Skip Fiscal Year 1994
2030 FIND (F3,KEY=A$(1,10),DOM=2010)
2040 WRITE RECORD (F2,KEY=K$,DOM=2100)A$; IF F2=Z[2] THEN IF RT_PARM$<>"" THEN CUST$=K$(1,10); CALL "RT2WOC",ERR=2041,X3$,X4$,"AR9...","U",K$
2045 GOTO 2010
2095 RETURN 
2100 REM "handle records already in F2 by reading both & updating
2105 DIM K[14],L[14]; Q1$=K$(1,LEN(K$)-1),Q0$=K$(LEN(K$),1)
2110 GOSUB 7100; GOSUB 7200
2120 FOR I=0 TO 14; L[I]=L[I]+K[I]; NEXT I
2180 GOSUB 7250
2195 GOTO 2010
5000 REM 
5010 C=T; GOSUB 8150
5080 CALL "ZZPROM","4",X3$,0,"Process Complete!","","",0
5090 GOTO 9900
6000 REM 
6090 RETURN 
7000 REM "Update stats q0$ in period q1 with data q0
7010 DIM K[14]; P9$=Q1$+Q0$
7020 GOSUB 7100
7040 K[Q1]=K[Q1]+Q0
7060 GOSUB 7150
7090 RETURN 
7100 REM "Read stats (Packed/Unpacked) - F1
7110 CALL "ZZPACK",X3$,"R","","",0,0,K{ALL},F1,Q0$,Q1$,F7$
7135 GOTO 7190
7150 REM "Write stats - F1
7160 CALL "ZZPACK",X3$,"W","","",0,0,K{ALL},F1,Q0$,Q1$,F7$
7190 RETURN 
7200 REM "Extract stats - F2
7210 CALL "ZZPACK",X3$,"E","","",0,0,L{ALL},F2,Q0$,Q1$,F7$
7215 GOTO 7295
7250 REM "Write stats - F2
7260 CALL "ZZPACK",X3$,"W","","",0,0,L{ALL},F2,Q0$,Q1$,F7$
7295 RETURN 
8100 REM "GOSUB here, once, at the beginning, after the background is set and before the Proceed? question. Set T to total # to do (by calling ZZINFO) and T0 to the reporting interval (report every T0 number of records) this is typically 2% of total; This also prints a message (@8115),so adjust accordingly
8110 CALL "ZZINFO",Z[1],T9,X3$,T,T0,K,B,D,S0,S1,F$
8113 CALL "ZZINFO",Z[3],T9,X3$,T3,T0,K,B,D,S0,S1,F$
8114 T=T+T3
8115 PRINT @(0,7),"There are "+STR(T)+" records to process"
8130 T0=INT(T*.02); IF T0<=1 THEN T0=2
8145 RETURN 
8150 REM "Call this each time to update the bar graph. Display horiz. bar graph given total #, T and current #, C, and time counter T1 (T1 is init'ed here and used here, just don't use it somewhere else)
8155 CALL "ZZBARG",X3$,"HG",19,10,50,T1,T,C
8195 RETURN 
8930 DEF FNS$(Z9$)=Z9$(1,POS(S$=Z9$+S$)-1)
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 GOTO 2200
9900 REM "END PROGRAM
9902 CALL "ZZDAPP",X3$,"IPL"
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
