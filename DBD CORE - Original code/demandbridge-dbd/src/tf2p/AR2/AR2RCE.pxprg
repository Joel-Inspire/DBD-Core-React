1215 T0=0
1220 ON T GOTO 1250,1225,1230,1235,1240
1225 T0=T0+A[9]
1230 T0=T0+A[10]
1235 T0=T0+A[11]
1240 T0=T0+A[12]
1250 IF T0<=0 THEN GOTO 1000
