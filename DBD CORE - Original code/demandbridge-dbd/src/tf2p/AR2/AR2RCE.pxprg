6110 IF P0$(19,1)="Y" THEN I$=A$(220,9) ELSE DIM I$(9); I$(1,2)=A$(1,2)
6120 IF I$(1,9)=E$(1,9) THEN GOTO 6140
6125 DIM E$(202); E$(1,9)=I$(1,9)
6130 READ (Z[7],KEY=I$,DOM=6131)IOL=0350
6150 G$=E$(70,12)
6190 RETURN 
