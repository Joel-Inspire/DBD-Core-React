1305 IF C$(1,2)=A$(132,2) THEN GOTO 1400
1310 DIM C$(49),C[11]
1320 READ (Z[5],KEY=A$(132,2),DOM=1000)IOL=0330
1400 REM "Calc Tax
1410 I=1
1420 IF I>9 THEN R=C[10]; GOTO 1500
1430 IF C[I]=0 OR T0<=C[I] THEN R=C[I+1]; GOTO 1500
1440 I=I+2; GOTO 1420
1500 REM " set up invoice
1510 IF T0=0 OR R=0 THEN GOTO 1000
1520 T1=T0*R/1200
1525 IF T1<C[10] THEN T1=C[0]
1530 IF T1=0 THEN GOTO 1000
1540 DIM B$(325),B[19]
1550 B$(1,6)=V0$(85,6),B$(7,8)=V0$(72,7),B$(15,45)=A$(1,45),B$(60,1)="N",B$(77,1)="F",B$(86,6)=V0$(79,6),B$(116,6)=V0$(79,6),B$(153,9)=A$(220,9),B$(100,15)="Finance charge"
1560 B[1]=T1,B[9]=T1
1570 GOSUB 6000
1580 WRITE (Z[2],KEY=B$(1,14))IOL=0320
1600 REM "Update invoice no"
1610 IF V0$(72,7)="9999999" OR V0$(72,7)="0000000" THEN V0$(72,7)="0000001" ELSE V0$(72,7)=STR(NUM(V0$(72,7))+1:"0000000")
1620 WRITE (Z[6],KEY=X3$(9,3)+"ARFC")V0$(72,7)
1800 GOTO 1000
4900 REM "END OF LINES
4910 Y[4]=-1; WRITE (F,IND=0)IOL=0290
