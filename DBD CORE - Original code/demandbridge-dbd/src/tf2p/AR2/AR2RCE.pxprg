5210 EXTRACT (Z[3],IND=0,ERR=5295)IOL=0290
5215 IF Y[4]=-2 THEN READ (Z[3]); WAIT 0; GOTO 5210
5220 Y[4]=-2; WRITE (Z[3],IND=0)IOL=0290
5230 IF Y[1]<1 THEN A9=Y[2],Y[2]=Y[2]+1; GOTO 5260
5255 A9=Y[1]; READ (Z[3],IND=A9)Y[1]
5260 IF Y[0]<Y[3]-1 THEN Y[0]=Y[0]+1,Y[4]=-1 ELSE Y[2]=Y[2]-1; GOTO 4900
5280 WRITE (Z[3],IND=0)IOL=0290
5290 RETURN 
5295 IF ERR<>0 THEN GOTO 9500 ELSE RETRY 
