0010 REM "Rebuild item stat 'c'ost record from usage <FS2UTA>
0020 SETESC 9300; SETERR 9000
0035 REM "4.1 - 02/11/97 - 16.61 - kmc
0040 REM "Copyright 1997 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0100 SETERR 9000
0110 X0$="FS2UTA",X1$="Create 'C' Item Stat Records"
0120 DIM Z0$(80,"-")
0130 K0=20,K1=1,T0$="ZZXAR1"
0135 C9=-1
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0300 REM "IOLISTS
0310 IOLIST A$,A[0],A[1],A[2],A[3],A[4],A[5],A[6],A[7],A[8],A[9],A[10],A[11],A[12],A[13],A[14],A[15],A[16],A[17],A[18],A[19],A[20],A[21],A[22],A[23],A[24],A[25],A[26],A[27],A[28],A[29],A[30],A[31]
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O FM1...  02O FM3...  03OSFM3...  13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0530 GOSUB 8000
0585 RT_PARM$=""; CALL "RT2PRM",ERR=0586,X3$,X4$,RT_PARM$
0600 REM "
0610 GOSUB 6000
0620 DIM J[1],A[31]
0640 L9=0; CALL T0$,X3$,X4$,Y0$,W$,W{ALL},0,C0,L9
0740 CALL "ZZPROM",".6 ZX2MMA",X3$,Z,"CREATE NEW COST STATISTICS FROM USAGE?","","",0; ON Z GOTO 0741,0640,9900
0840 FOR X=0 TO 9; F1$=F1$+F9$(49+X*17,5),F2$=F2$+F9$(54+X*17,12); NEXT X
0850 X9=POS("U"=F1$,5),X8=POS("C"=F1$,5)
0910 GOSUB 6500
0980 PRINT @(25,13),"Item",
0990 READ (Z[2],KEY=W$(1,10),DOM=0991)
1000 REM 
1020 K$=KEY(Z[2],END=5000); READ (Z[2])
1040 IF K$(1,10)>W$(11,10) THEN GOTO 5000
1045 IF K$(29,1)<>"U" THEN GOTO 1020
1050 PRINT @(30,13),K$(1,10),"-",K$(11,10),
1100 REM "
1120 DIM Y[14]; CALL "ZZPACK",X3$,"R",F1$(X9+2,3),"",0,0,Y{ALL},Z[2],"U",K$(1,28),F9$
1130 READ (Z[1],KEY=K$(1,20))IOL=0310
1140 IF A[3]=0 THEN GOTO 1000 ELSE IF A[4]=0 THEN A[4]=1
1200 REM "Compute Cost Totals
1210 DIM X[14]
1220 FOR X=1 TO 13
1230 X[X]=Y[X]*A[3]/A[4]
1240 NEXT X
1300 REM "WRITE 'C' RECORD
1320 CALL "ZZPACK",X3$,"W",F1$(X8+2,3),"",0,0,X{ALL},Z[3],"C",K$(1,28),F9$
1990 GOTO 1000
5000 REM "EOJ
5020 CALL "ZZPROM",".4",X3$,Z,"Process complete!!","","",0
5040 GOTO 9900
6000 REM "BACKGROUND
6005 PRINT (0,ERR=6016)'SB',
6020 CALL T0$,X3$,X4$,Y0$,W$,W{ALL},2,0,L0
6040 PRINT @(0,10),'CE',"This utility will build 'C'ost statistical records based on the",'LF',"item usage and CURRENT FORM SELL PRICE.  Previous information will",'LF',"be OVERWRITTEN."
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
6500 REM "DELETE OLD 'C' RECORDS
6502 PRINT @(0,22),'CE',@(12),"Clearing old 'C' stat records...",
6505 READ (Z[2],KEY=W$(1,10),DOM=6506)
6510 K$=KEY(Z[2],END=6590); READ (Z[2])
6515 IF K$(1,10)>W$(11,10) THEN GOTO 6590 ELSE IF K$(29,1)<>"C" THEN GOTO 6510
6520 REMOVE (Z[2],KEY=K$); IF RT_PARM$<>"" THEN CUST$=K$(1,10); CALL "RT2WOC",ERR=6521,X3$,X4$,CUST$,"FM3...","D",K$
6545 GOTO 6510
6590 PRINT @(0,22),'CE',
6595 RETURN 
7400 REM "UPDATE 'C' RECORD
7401 DIM Y[14]; X$="C"
7405 FOR X=0 TO 14; Y[X]=A[X]*B[3]/B[4]; NEXT X; GOTO 7470
7410 REM "GET OLD USAGE QTYS
7415 Q$="E"; CALL "ZZPACK",X3$,Q$,F1$(X9+2,3),P9$,0,0,Y{ALL},Z[1],X$,A1$(1,LEN(A1$)-1),F9$
7420 FOR X=0 TO 14; IF X[X]=A[X] THEN GOTO 7430 ELSE IF X[X]<>0 THEN Q0=Y[X],Q1=X[X] ELSE Q0=B[3],Q1=B[4]
7421 IF Q0=0 THEN Q0=B[3],Q1=B[4]
7425 Y[X]=A[X]*Q0/Q1
7430 NEXT X
7470 REM "WRITE 'C' RECORD
7475 Q$="W"; CALL "ZZPACK",X3$,Q$,F1$(X9+2,3),P9$,0,0,Y{ALL},Z[1],X$,A1$(1,LEN(A1$)-1),F9$
7495 RETURN 
8000 REM "
8010 READ (Z[13],KEY="STATF/M")F9$
8080 RETURN 
8090 EXITTO 9900
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
