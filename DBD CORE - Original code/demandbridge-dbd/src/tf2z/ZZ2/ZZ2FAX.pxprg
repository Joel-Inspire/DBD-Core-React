10350 CALL "ZZ2CMD",X3$,X4$,COMMAND$,ARG$,"NR",RETURN_CODE,RETURN$
10360 INVOKE "rm -f "+FROM_DIR$+"/"+NEXT_FILE$
10370 NEXT_FILE$=PS_FILE$
10390  }
