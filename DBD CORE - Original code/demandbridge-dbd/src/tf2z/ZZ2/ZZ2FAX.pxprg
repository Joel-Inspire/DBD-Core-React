10000 UNIX_FAX:
10001 GOSUB SET_FIELDS
10002 MSG$="ZZ2FAX|DIR|"+FROM_DIR$; MX=FN%TOD_LOG("INFO",MSG$,1,0)
10005 CMD_CHAN=UNT; OPEN (CMD_CHAN,ERR=*RETURN)FROM_DIR$
10010 NEXT_FAX2:
10020 READ (CMD_CHAN,END=END_OF_FAX)NEXT_FILE$; IF NEXT_FILE$="." OR NEXT_FILE$=".." THEN GOTO *SAME; REM SSP 207725
10025 GOSUB CONVERT_TO_PS
10030 COMMAND$="{VF_FAX}",FAX_FILE$=FROM_DIR$+"/"+NEXT_FILE$
10040 FAX_OPT$=FAX_TO$+SEP+FAX_FILE$
10045 MSG$="ZZ2FAX|CMD|"+COMMAND$+"|FAXTO|"+FAX_TO$+"|FILE|"+FAX_FILE$; MX=FN%TOD_LOG("INFO",MSG$,1,0)
10050 CALL "ZZ2CMD",X3$,X4$,COMMAND$,FAX_OPT$,"NR",RETURN_CODE,RETURN$
10055 MSG$="ZZ2FAX|RET|"+STR(RETURN_CODE)+"|"+RETURN$+"|"; MX=FN%TOD_LOG("INFO",MSG$,1,0)
10110 INVOKE "rm -f "+FROM_DIR$+"/"+NEXT_FILE$
10115 MSG$="ZZ2FAX|REMOVING FILE|"+NEXT_FILE$; MX=FN%TOD_LOG("INFO",MSG$,1,0)
10120 GOTO NEXT_FAX2
10150 END_OF_FAX:
10160 CLOSE (CMD_CHAN)
10170 MSG$="ZZ2FAX|DONE|"; MX=FN%TOD_LOG("INFO",MSG$,1,0)
10190 RETURN 
