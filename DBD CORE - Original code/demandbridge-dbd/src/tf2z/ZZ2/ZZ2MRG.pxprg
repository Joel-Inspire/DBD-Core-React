0010 REM "Put listed text file into indexed file $$ <ZZ2MRG>
0100 BEGIN 
0220 PRINT 'CS'
0230 INPUT "ENTER THE TEXT FILE NAME: ",Q$
0410 OPEN (1,ERR=0200)Q$
0420 OPEN (7)"$$$"
0990 X9$=$0A0D$
1040 P=POS(X9$=A$); IF P=0 THEN READ RECORD (1)X$; A$=A$+X$; GOTO 1000
1050 Q$=A$(1,P-1),A$=A$(P+LEN(X9$))
1080 PRINT Q$
1085 PRINT (7)Q$
1090 GOTO 1000
9999 END 
