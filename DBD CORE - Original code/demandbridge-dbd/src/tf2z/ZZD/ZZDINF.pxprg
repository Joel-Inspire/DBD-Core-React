0010 REM "Return Date Information <ZZDINF>
1000 REM 
1020 ENTER X3$,D0$,D1$,X0,D0,D1,D2,D3,D4
1100 REM 
1120 Q1=NUM(D0$(5,2)),Q0=NUM(D0$(3,2)),Q2=NUM(D0$(1,2),ERR=1121); GOTO 1130
1125 F0=1,Q2=(ASC(D0$(1,1))-65)*10+1900+NUM(D0$(2,1))
1200 REM "JULIAN DATE
1210 Z0$="000031059090120151181212243273304334"
1220 Q=NUM(Z0$((Q0-1)*3+1,3))+Q1; IF Q0>2 THEN Q=Q+1-SGN(FPT(Q2/4))
1230 D0=Q+Q2*1000
1300 REM "MAX DAYS IN MONTH
1310 Q=31-SGN(POS(STR(Q0:"00")="0904061102",2)); IF Q=2 THEN Q=Q-1-SGN(FPT(Q2/4))
1320 D1=Q
1400 REM "DAY IN WEEK
1410 CALL "ZZDAYT",D0$,D2
