0010 REM "Return UNIX file specs <ZZUINF>
1020 ENTER F9$,F1$,F9
1030 F0$=F9$
1090 F0=14
1200 REM "Get disk path
1220 CLOSE (F0); OPEN (F0,ERR=8000)F0$
1225 Q$=FID(F0)
1240 D0=ASC(Q$(20,1))
1250 CLOSE (F0); OPEN (F0)"D"+STR(D0:"0")
1260 W$=FID(F0)
1280 F1$=W$(4,6)+W$(21)
1400 REM "TRY TO GET SPECS
1420 S0$="cp /dev/null ./TMP"+FID(0),F2=1
1425 S0$=S0$+";ls -l "+F1$+"/"+F0$+" >UTILS/TMP"+FID(0)
1440 INVOKE S0$
1460 CLOSE (F0); OPEN (F0)"TMP"+FID(0)
1480 READ RECORD (F0,END=1500)F2$
1490 GOTO 1600
1500 REM "Possibly in sub-DIRectories (BASIC)
1510 IF F2=1 THEN F9=12; GOTO 8000
1520 F0$=F0$(1,3)+"/"+F0$
1530 GOTO 1400
1600 REM 
1620 ESCAPE 
8020 F9=ERR
8090 EXIT 
