0010 ! TFV - File Viewer
0030 %FLNAM$=""
0050 ENTER _FLNAM$,ERR=*NEXT; %FLNAM$=STP(_FLNAM$,3)
0070 IF NUL(_FLNAM$) THEN INPUT "Enter the Filename to view: ",%FLNAM$
0075 TEST=HFN; OPEN (TEST,ERR=*NEXT)%FLNAM$; CLOSE (TEST); GOTO FILE_OK
0080 OPEN (TEST,ERR=*NEXT)UCS(%FLNAM$); CLOSE (TEST); %FLNAM$=UCS(%FLNAM$); GOTO FILE_OK
0085 FILE_OK:
0090 PROCESS "GU_FILVIEW","*GUI/GUIUTILS.EN"
0110 END 
