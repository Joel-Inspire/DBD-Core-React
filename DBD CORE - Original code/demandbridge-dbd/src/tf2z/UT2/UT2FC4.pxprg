0010 REM "Four digit form code conversion <UT2FC4>
0050 BEGIN 
0060 C0$="500"
0110 OPEN (1)"FM1"+C0$
0120 OPEN (2)"FM3"+C0$
0130 OPEN (3)"FM4"+C0$
0500 FOR F=1 TO 3
0510 GOSUB 2000
0520 NEXT F
0530 GOTO 9900
2000 K$=KEY(F,END=3000)
2050 PRINT F," ",K$
2100 READ RECORD (F,KEY=K$)R$
2200 IF POS(" "<>K$(15,6))>0 THEN GOTO 2900
2300 A$=STR(NUM(K$(11,4),ERR=2900):"0000")
2400 J$=K$,J$(11,4)=A$,R$(11,4)=A$
2500 WRITE RECORD (F,KEY=J$)R$
2600 REMOVE (F,KEY=K$)
2900 GOTO 2000
3000 RETURN 
9900 PRINT "EOJ"
9999 END 
