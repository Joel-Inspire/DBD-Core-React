0010 REM "Renumber A/R Customer File <UT2NUM>
0020 SETESC 9300; SETERR 9000
0035 REM "3.4.1 - 09/30/91 - 12.02
0040 REM "Copyright 1991 Computer Software Inc.; Norcross, Georgia
0041 REM "        Licensed Software - All Rights Reserved.
0090 BEGIN 
0100 SETERR 9000
0110 X0$="UT2NUM",X1$="A/R Customer Renumber program"
0120 DIM Z0$(80,"-")
0130 K0=20,K1=1
0135 C9=-1
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0300 REM "IOLISTS
0400 S0$="000000000000000"
0410 S1$="999999999999999"
0450 OPEN (1)"AR6"+X3$(9,3)
0460 READ (1,END=0480)
0470 INPUT @(5,15),"There are open invoices, Customers can not be renumbered!!!",*; GOTO 9900
0480 CLOSE (1)
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O AR1...  02O ARE...  13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0600 REM "
0610 GOSUB 6000
0640 IF Q1$="" THEN CALL "ZZPROM",".Y",X3$,Z,"Proceed?","","",0; ON Z GOTO 0641,9900
0650 ERASE "AR1"+X3$(9,3)+"X",ERR=0651
0660 ERASE "ARE"+X3$(9,3)+"X",ERR=0661
0700 REM "DEFINE AR1 AND ARETMP
0710 CALL "ZZINFO",1,X0,X3$,R0,R1,K,B,D,T0,S0,F$
0715 A0=R0
0717 ERASE F$(1,3)+"TMP",ERR=0718
0720 DIRECT F$(1,3)+"TMP",K,R1
0723 ERASE "ARXREF",ERR=0724
0725 DIRECT "ARXREF",K,R1,48
0730 CALL "ZZINFO",2,X0,X3$,R0,R1,K,B,D,T0,S0,F$
0735 ERASE F$(1,3)+"TMP",ERR=0736
0740 SORT F$(1,3)+"TMP",K,R1
0750 Z$="03O AR1TMP  04O ARETMP  05O ARXREF  "
0760 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0761,9900
0800 REM "READ PARAMS
0810 READ (Z[13],KEY=X3$(9,3)+"A/R",DOM=9900)P0$
0820 P0=NUM(P0$(14,1))
0900 DIM A[3]
0940 READ (Z[1],KEY="",DOM=0941)
1000 B0=NUM(S1$(1,P0))-1000
1010 IF C1>=B0/A0 THEN C1=C1-25; GOTO 1011 ELSE C1=C1+25; GOTO 1010
1100 INPUT (0,ERR=1100)@(5,22),'CL',"Enter the spacing factor or <CR> for "+STR(C1)+" :",J0
1102 IF J0<0 OR J0>C1 THEN GOTO 1100
1105 IF J0=0 THEN J0=C1
1120 N=NUM("1000"+S0$(1,8-P0))
1200 K$=KEY(Z[2],END=5000)
1210 READ RECORD (Z[1],KEY=K$(11,10))D$
1220 D$(3,8)=STR(N:S0$(1,8))
1230 PRINT @(15,10),'CL',D$(1,10),"  ",K$(1,10),
1240 WRITE RECORD (Z[3],KEY=D$(1,10))D$
1250 WRITE (Z[4],KEY=K$(1,10)+D$(1,10))
1255 DIM E$(45); E$(1,45)=D$(1,45); WRITE (Z[5],KEY=K$(11,10))E$
1260 N=N+NUM(STR(J0)+S0$(1,8-P0))
1270 READ (Z[2],END=5000)
1290 GOTO 1200
5000 REM "EOJ
5010 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
5020 IF Q1$="" THEN CALL "ZZPROM",".4",X3$,Z,"Process complete! Original files have an 'X' suffix. ARXREF now exists","","",0
5030 RENAME "AR1"+X3$(9,3),"AR1"+X3$(9,3)+"X"
5031 RENAME "AR1TMP","AR1"+X3$(9,3)
5035 RENAME "ARE"+X3$(9,3),"ARE"+X3$(9,3)+"X"
5036 RENAME "ARETMP","ARE"+X3$(9,3)
5040 GOTO 9900
6000 REM "BACKGROUND
6005 PRINT (0,ERR=6016)'SB',
6020 PRINT @(5,4),"This CSI utility program will renumber the customer files."
6030 PRINT @(0,6),"The Customer Lookup Sequence will be used to renumber, so it should be already in the desired order.  The source (original) files AR1 and ARE will remain unchanged but will now have an 'X' suffix on the file name.  A cross reference file ARXREF will also be built for possible future use.  ARXREF will be keyed by the old number and the data will be the new number and the customer name.",'LF'
6040 PRINT "When satisfied with the renumbering, use UT2ERD to erase the AR1cccX and AREcccX",'LF'
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
