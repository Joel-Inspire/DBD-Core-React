0010 REM "Convert ARX file for new layout <UT2ARX>
0020 REM "Add blank salesperson and category code to ARX file
0100 BEGIN ; SETERR 9000; SETESC 9300
0110 X0$="UT2ARX",X1$="Convert ARX File"
0120 DIM Z0$(80,"-")
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,X0,X1,X2; IF X1>0 THEN GOTO 9920
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01X ARX...  02S ARX...  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
1000 REM "Process file
1010 K$=KEY(Z[1],END=5000)
1015 PRINT @(20,20),K$,
1020 READ RECORD (Z[1],KEY=K$)A$
1030 B$=A$(1,2)+"    "+"         "+A$(3,3)+"  "+A$(6)
1035 B$=B$(1,LEN(B$)-15)
1050 WRITE RECORD (Z[2],KEY=B$(1,25))B$
1060 REMOVE (Z[1],KEY=K$)
1070 GOTO 1000
5000 REM " END
5010 INPUT @(20,20),'CE',"Process Complete ",*
5050 GOTO 9900
9000 REM 
9010 PRINT @(0,20),'CE',"ERR=",ERR," LINE = ",TCB(5); INPUT *
9900 REM "END
9910 RUN "ZMENU"
9999 END 
