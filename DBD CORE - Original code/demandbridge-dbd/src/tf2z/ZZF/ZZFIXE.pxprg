0010 REM "Calculate Program Size and CkSum <ZZFIXE>
0030 REM "(C) 1985,1986,1987 Basic Ideas, Inc; Atlanta, Ga.
0035 REM "This software contains trade secrets and proprietary information"
3000 ENTER X3$,F0,L,A9$; L$=$05FFFF34F2030000$+L9$
3001 ESCAPE 
3010 IF X3$(77,1)<>"U" THEN L$=$05271034F2030000$+L9$
3020 A9$=A9$+L$,L0=LEN(A9$),L=L+LEN(L$),K=INT(L/256); PRECISION 10; K=INT((L-0)/256); PRECISION 2; IF MOD(L,256)=0 THEN K=K-1
3025 IF LEN(A9$)>256 THEN WRITE RECORD (F0)A9$(1,256); A9$=A9$(257),L0=L0-256; GOTO 3025
3030 WRITE RECORD (F0)A9$; X=0,B7$=BIN(K*256+LEN(A9$),3)
3040 READ RECORD (F0,IND=X)A$; IF X=0 THEN A$(1,3)=B7$,A8$=CRC(B7$+A$(12)) ELSE A8$=CRC(A$+A8$)
3050 IF X<K THEN WRITE RECORD (F0,IND=X)A$; X=X+1; GOTO 3040 ELSE K=LEN(A9$)-1,A$(K)=A8$; WRITE RECORD (F0,IND=X)A$
3090 EXIT 
9999 END 
