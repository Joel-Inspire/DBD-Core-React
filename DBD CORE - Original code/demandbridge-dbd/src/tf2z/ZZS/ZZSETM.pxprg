0010 REM "CHANGE MESSAGE PROGRAM <ZZSETM>
1000 ENTER X3$,M9$,Q$
1820 CLOSE (14); OPEN (14)"ZZPARM"
2010 IF Q$<>"" THEN CALL "ZZMESG",ERR=2011,X3$,"","","",0,0,M8$; GOSUB 7500 ELSE M8$=M9$
2020 WRITE (14,KEY="MESG")"MESG",M8$
2290 GOTO 9900
7510 IF Q$="+" THEN IF POS(M9$=M8$,3)=0 THEN M8$=M8$+M9$; GOTO 7590
7520 IF Q$="-" THEN Q=POS(M9$=M8$,3); IF Q>0 THEN M8$=M8$(1,Q-1)+M8$(Q+3); GOTO 7590
7590 RETURN 
9940 EXIT 
9999 END 
