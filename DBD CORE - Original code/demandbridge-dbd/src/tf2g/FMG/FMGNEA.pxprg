0050 PROCESS "FMGNEA","../FMG/FM.EN"
0060 EXIT 
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0100 INIT:
0110 X0$="FM2NEA",X1$="Copy Spec Code Change",K9$="",K9=0
0120 DIM Z0$(80,"-")
0130 K0=15,K1=2,C=1
0135 C9=-1
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,-1,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(65,1)>"2" THEN PRECISION NUM(X3$(65,1),ERR=0246)
0280 K9$="S"
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0300 REM "IOLISTS
0310 IOLIST A$(1)
0320 IOLIST B$,B[0],B[1],B[2],B[3],B[4],B[5],B[6],B[7],B[8],B[9],B[10],B[11],B[12],B[13],B[14],B[15]
0330 IOLIST C$,C[0],C[1],C[2],C[3],C[4],C[5],C[6],C[7],C[8],C[9],C[10],C[11],C[12],C[13],C[14],C[15],C[16],C[17],C[18],C[19],C[20],C[21],C[22],C[23],C[24],C[25],C[26],C[27],C[28],C[29],C[30],C[31]
0340 IOLIST D$
0350 IOLIST E$
0360 IOLIST F$
0410 IOLIST M$
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01X ASB...  02O AR1...  03O FM1...  04O FMU...  05O FMS...  06O FMV...  07OSFMU...  08OSFMS...  09OSFMV...  10O FSF...  11S FSF...  13O ZZPARM  "
0520 GOSUB 9750; ON Z0 GOTO 0521,9900
0600 REM "
0620 GOSUB 8100
0680 GOSUB 6000
1000 REM "
1010 Y8=1,Z8=0; CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,X5$,-1,X1,X2
1030 DIM B$(599),B[15],C$(449),C[31]
1035 DIM A$(40),D$(135),E$(63),F$(90)
1060 GOSUB 6450; GOTO 1100
1070 GOSUB 6000; GOSUB 6450
1100 REM "KEY SEQ
1110 X0=-1,C0=0,X1=0,C9=0,Z9=0
1120 SETERR 9000; C0=ABS(C0),X$=""; IF C0=2 AND X0>0 THEN X0=X0-1 ELSE IF C0<>2 THEN X0=X0+1; IF C0=4 THEN GOTO 9900
1140 ON X0 GOTO 1200,1250,1600
1200 REM "Customer code
1201 CUSTOMER$="",%CUST_NAME$="",NEXT_ID=CUSTOMER.CTL,ITEM_CODE$="",%ITEM_DESC$=""; EXIT 
1205 SEL_CUSTOMER:
1207 IF STP(CUSTOMER$)="" THEN EXIT 
1210 A$(1,10)=CUSTOMER$ ! CALL "ZZENTR","AXUX",A{ALL},A$,X4$,X3$,31,3,1,10,C0,"A/R","{1"+X$,"","FM2ND000","AR1","",""; IF C0=6 THEN GOSUB 6400; C0=1
1212 IF INT(ABS(C0))=3 THEN C0=-ABS(C0)
1215 IF C0<0 THEN ON INT(ABS(C0)-2) GOTO 1210,6800,9800,6970
1220 IF V9<>-2 THEN FIND (Z[2],KEY=A$(1,10),DOM=1210)IOL=0320
1225 ! PRINT @(43,3),B$(11,35),
1240 GOTO 1120
1250 REM "Item code
1251 NEXT_ID=ITEM_CODE.CTL; RETURN 
1252 SEL_ITEM:
1260 A$(11,10)=ITEM_CODE$ ! CALL "ZZENTR","SUX",A{ALL},A$,X4$,X3$,31,5,11,10,C0,"","{2"+X$,"","FM2ND002","FM1","",""; IF C0=6 THEN GOSUB 6400; C0=1
1265 IF INT(ABS(C0))=3 THEN GOTO 6800 ELSE IF ABS(C0)=4 THEN GOTO 9900
1270 IF V9<>-2 THEN EXTRACT (Z[3],KEY=A$(1,20),DOM=1260)IOL=0330
1275 ! PRINT @(43,5),C$(42,40),@(31,9),C$(370,10),
1280 IF POS(" "<>C$(370,10))=0 THEN MSGBOX MSG("FMGNEA_M1"),MSG("WARNING"),"!,TIM=5CALL "; GOTO 1000 ! CALL"ZZPROM",".4",X3$,0,"You Must have a specification code in the source item!!!","","",0; GOTO 1000
1285 SOURCE_SPEC$=C$(370,10)
1290 GOTO 1120
1600 REM "
1601 CALL "*WINGRP;ENABLE",BUTTONS.GRP$; NEXT_ID=BT_PROCEED.CTL; RETURN 
1620 CALL "ZZPROM",".Y",X3$,Z,"Proceed?","","",0; ON Z GOTO 1621,1000
1690 GOTO 2000
1700 REM "
1790 GOSUB 6200
1800 PROCEED:
2000 REM "DATA SEQ
2010 REM " Extract record from 'FM1' file
2020 READ (Z[3],KEY=A$(1,10),DOM=2021)
2025 REM "LET C=C+1; IF MOD(C,T0)=1 THEN GOSUB 08150
2030 K$=KEY(Z[3],END=2200)
2035 READ (Z[3],KEY=K$)TEMP$
2037 IF TEMP$(1,10)<>A$(1,10) THEN GOTO 5000
2040 IF TEMP$(370,10)<>C$(370,10) THEN GOTO 2030
2045 IF A$(11,10)=TEMP$(11,10) THEN GOTO 2030
2100 REM "REMOVE OLD INFO FROM 'FMU' FILE
2110 READ (Z[4],KEY=TEMP$(1,20),DOM=2111)
2120 J$=KEY(Z[4],END=2190)
2125 REM "LET C=C+1; IF MOD(C,T0)=1 THEN GOSUB 08150
2130 READ (Z[4],KEY=J$)
2140 IF J$(1,20)=TEMP$(1,20) THEN REMOVE (Z[4],KEY=J$,DOM=2141) ELSE GOTO 2190
2150 GOTO 2120
2200 REM "WRITE OUT NEW INFO TO 'FMU' FILE
2210 READ (Z[4],KEY=A$(1,20),DOM=2211)
2220 JL$=KEY(Z[4],END=2290)
2221 REM "LET C=C+1; IF MOD(C,T0)=1 THEN GOSUB 08150
2225 IF JL$(1,20)<>A$(1,20) THEN GOTO 2290
2230 EXTRACT (Z[4],KEY=JL$)IOL=0340
2250 D$(1,20)=TEMP$(1,20)
2260 WRITE (Z[7],KEY=D$(1,23))IOL=0340
2270 READ (Z[4])
2280 GOTO 2220
2300 REM "Remove record from 'FMS' file
2305 JL$=""
2310 READ (Z[5],KEY=TEMP$(1,19),DOM=2311); GOTO 2340
2320 JL$=KEY(Z[5],END=2400)
2325 REM "LET C=C+1; IF MOD(C,T0)=1 THEN GOSUB 08150
2330 READ (Z[5],KEY=JL$)
2340 IF JL$(1,20)=TEMP$(1,20) THEN REMOVE (Z[5],KEY=JL$,DOM=2341) ELSE GOTO 2390
2350 GOTO 2320
2400 REM "Write out new info to 'FMS' file
2410 READ (Z[5],KEY=A$(1,19),DOM=2411)
2420 JL$=KEY(Z[5],END=2490)
2425 REM "LET C=C+1; IF MOD(C,T0)=1 THEN GOSUB 08150
2430 IF JL$(1,20)<>A$(1,20) THEN GOTO 2490
2440 EXTRACT (Z[5],KEY=JL$)IOL=0350
2450 E$(1,20)=TEMP$(1,20)
2460 WRITE (Z[8],KEY=E$(1,20))IOL=0350
2470 READ (Z[5])
2480 GOTO 2420
2500 REM "Remove old info from 'FMV' file
2510 READ (Z[6],KEY=TEMP$(1,19),DOM=2511)
2520 J$=KEY(Z[6],END=2590)
2530 READ (Z[6],KEY=J$)
2540 IF J$(1,20)=TEMP$(1,20) THEN REMOVE (Z[6],KEY=J$,DOM=2541) ELSE GOTO 2590
2550 GOTO 2520
2600 REM "WRITE OUT NEW INFO TO 'FMV' FILE
2610 READ (Z[6],KEY=A$(1,19),DOM=2611)
2620 JL$=KEY(Z[6],END=2690)
2630 IF JL$(1,20)<>A$(1,20) THEN GOTO 2690
2640 EXTRACT (Z[6],KEY=JL$)IOL=0360
2650 F$(1,20)=TEMP$(1,20)
2660 WRITE (Z[9],KEY=F$(1,23))IOL=0360
2670 READ (Z[6])
2680 GOTO 2620
2700 REM "WRITE OUT TO FM1 FILE WITH CORRECT NUMBER OF PLYS
2710 IF STP(F$(1,20),3," ")="" THEN GOTO 2790
2720 EXTRACT RECORD (Z[3],KEY=F$(1,20),DOM=2790)TMP$
2730 TMP$(21,21)=C$(21,21)
2750 WRITE RECORD (Z[3],KEY=F$(1,20))TMP$
2800 REM "REMOVE OLD INFO FROM 'FSF' FILE
2810 READ (Z[10],KEY=TEMP$(1,20),DOM=2811)
2820 J$=KEY(Z[10],END=2890)
2830 READ (Z[10],KEY=J$)
2840 IF J$(1,20)=TEMP$(1,20) THEN REMOVE (Z[10],KEY=J$,DOM=2841) ELSE GOTO 2890
2850 GOTO 2820
2900 REM "WRITE OUT NEW INFO TO 'FSF' FILE
2910 READ (Z[10],KEY=A$(1,19),DOM=2911)
2920 JL$=KEY(Z[10],END=2990)
2930 IF JL$(1,20)<>A$(1,20) THEN GOTO 2990
2940 EXTRACT (Z[10],KEY=JL$)IOL=0410
2950 M$(1,20)=TEMP$(1,20)
2960 WRITE (Z[11],KEY=M$(1,20))IOL=0410
2970 READ (Z[10],KEY=JL$)
2980 GOTO 2920
2990 GOTO 2030
5000 REM "EOJ
5010 C=T; GOSUB 8150
5020 MSGBOX "Process complete!!",MSG("CONFIRMING"),"!,TIM=5"; CMD_STR$="E"; EXIT 
5040 GOTO 9900
6000 REM "BACKGROUND
6001 RETURN 
6005 PRINT (0,ERR=6016)'SB',
6060 PRINT @(8,3+V0),"Source Customer code:",@(12,5+V0),"Source Item code:",@(0,7+V0),Z0$,
6070 PRINT @(3,9+V0),"Source Specification code:",
6075 PRINT @(0,11+V0),"This CSI utility will read from the Custom Item Master file for the customer",
6080 PRINT @(0,12),"indicated.  Whenever a item record has a specific code that matches the one",
6090 PRINT @(0,13),"from the source item, then the program will remove all specifications for that",
6095 PRINT @(0,14),"item and replace them with the specifications attached to the source form.",
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
6200 REM "DISPLAY DATA
6215 GOSUB 6450
6220 PRINT @(25,11),A$(26,4),
6390 RETURN 
6400 REM "WHOLE SCREEN
6405 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,X5$,X0,X1,0
6420 GOSUB 6000
6430 IF C9>0 THEN GOSUB 6200 ELSE GOSUB 6450
6440 IF ABS(C0)>4 THEN C0=ABS(C0)-5
6445 RETURN 
6450 REM "DISPLAY KEYS
6455 IF C9<0 THEN GOTO 6445
6464 ! CALL "ZZDISP","A   ",A$(1,10),"A/R",X3$,"","",31,3,X4$
6468 ! PRINT @(43,3),B$(11,35),@(40,5),C$(42,40),
6490 RETURN 
6500 REM "DELETE
6510 REMOVE (Z[1],KEY=A1$,DOM=6511)
6590 A1$=""; GOTO 1630
6600 REM "ALT KEY DATA READS
6605 FIND (Z[2],KEY=A$(2,10),DOM=6606)IOL=0320
6610 FIND (Z[3],KEY="C"+A$(2,10)+A$(12,4),DOM=6611)IOL=0330
6690 RETURN 
6700 REM "ADD ENTRY
6705 IF Z9=0 THEN GOTO 6790 ELSE IF V7$>"" THEN X0=POS(" "<>V7$); IF X0>0 THEN X0=X0-1; GOTO 2038
6710 WRITE (Z[1],KEY=A1$)IOL=0310
6790 C9=0; IF Z=6 OR K1=0 THEN GOTO 9900 ELSE IF Z<4 THEN GOTO 1000 ELSE C0=-(3.1+(Z-4)/10); GOTO 6800
6800 REM "NEXT ENTRY IN FILE
6805 ON 10*FPT(C0)+2 GOTO 6850,6806
6810 A1$=KEY(Z[1],END=6895)
6820 IF A1$="" THEN GOTO 6800 ELSE IF A1$(1,LEN(K9$))<>K9$ THEN GOTO 6895
6825 A$(1,LEN(A1$))=A1$
6830 GOSUB 6600
6835 GOSUB 6450
6840 GOTO 1515
6850 REM "PRIOR ENTRY
6855 CALL "ZZKEYP",ERR=6856,Z[1],A1$; GOTO 6820
6856 CALL "ZZPROM","K0",X3$,S3,"","","",0; ON S3 GOTO 6857,9900
6860 PRINT 'RB',; CALL "ZZKEYL",ERR=6861,Z[1],A1$; GOTO 6820
6865 GOTO 1100
6870 GOTO 6895
6890 GOTO 1515
6895 CALL "ZZPROM","K1",X3$,S3,"","","",0; IF S3=1 THEN GOTO 9900 ELSE IF A1$="" THEN GOTO 6860 ELSE PRINT 'RB',; READ (Z[1],KEY=K9$,DOM=6896)
6898 ON S9 GOTO 6810,1100
7200 REM "Forced read 
7210 IF ERR<>0 THEN GOTO 9000
7220 CALL "ZZREAD",Z[1],A1$,A$,A{ALL},S8; ON S8 GOTO 7221,1630
7230 GOSUB 6200
7240 CALL "ZZPROM","E0",X3$,0,"","","",0; GOTO 7290
7250 CALL "ZZPROM","E0A",X3$,0,"","","",0; GOTO 7290
7290 GOTO 1630
7390 IF X0>0 THEN X0=X0-0
7400 REM "EXTRACT
7410 EXTRACT (Z[1],ERR=7200,KEY=A1$,DOM=7440)IOL=0310
7420 C9=1,Z9=1; GOSUB 5800
7440 RETURN 
7450 REM "EXTRACT NEW ENTRY
7460 WRITE (Z[1],KEY=A1$,DOM=7250)IOL=0310; GOTO 7400
7490 RETURN 
8100 REM "GOSUB here, once, at the beginning, after the background is set and before the Proceed? question. Set T to total # to do (by calling ZZINFO) and T0 to the reporting interval (report every T0 number of records) this is typically 2% of total; This also prints a message (@8115),so adjust accordingly
8110 CALL "ZZINFO",Z[1],T9,X3$,T,T0,K,B,D,S0,S1,F$
8115 ! MSGBOX "There are "+STR(T)+" records to process","","INFO,TIM=3"
8129 REM "Set T0, we make sure T0 is > 1, because later on we MOD and lookfor avalue of 1. IF T0 is 1, then nothing would get reported. We lookfor a result of 1 because this causes the first record to automatically start the reporting instead of waiting until the T0'th record to get the first report
8130 T0=INT(T*.02); IF T0<=1 THEN T0=2
8145 RETURN 
8150 REM "Call this each time to update the bar graph. Display horiz. bar graph given total #, T and current #, C, and time counter T1 (T1 is init'ed here and used here, just don't use it somewhere else)
8155 CALL "ZZBARG",X3$,"HG",19,10,50,T1,T,C
8195 RETURN 
8905 DEF FNP$(Z9$)="("+Z9$(1,3)+") "+Z9$(4,3)+"-"+Z9$(7,4)+" Ext: "+Z9$(11,4)
8910 DEF FND$(Z9$)=Z9$(3,2)+"/"+Z9$(5,2)+"/"+STR((ASC(Z9$(1,1))-65)*10+1900+NUM(Z9$(2,1))-1570*POS("  "=Z9$(1,2)):"####")
8915 DEF FNT$(Z9$)=STR(NUM(Z9$(1,2))-12*POS("13"<=Z9$(1,2),2)+12*POS("00"=Z9$(1,2)):"00")+":"+STR(NUM(Z9$(3,2))*.6:"00")+" "+CHR(65+15*POS("12"<=Z9$(1,2),2))+"M"
8920 DEF FNB$(Z9$)=X3$(214-6*NUM(Z9$),1)
9000 REM "ERROR PROCESSING
9010 Y5=ERR,Y6=TCB(5); IF Y5=68 OR Y5=69 THEN GOTO 9500
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9120 ON Y8 GOTO 9900,0990,9920
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)<>"1" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; SETESC 9300; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9740 RETURN 
9750 REM "FILES
9760 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1
9790 RETURN 
9800 REM "EXIT PROGRAM
9900 REM "END PROGRAM
9901 END_PRG:
9905 Y8=2
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
