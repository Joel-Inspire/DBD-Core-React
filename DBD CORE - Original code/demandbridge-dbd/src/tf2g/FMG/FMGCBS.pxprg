20170 ! 
20175 RNG$=""
20180 ! 
20190 IF RPT_SEQ$="1" THEN {
20200 T1$="TMP..."
20210 GOSUB GET_CUST_RANGE
20220 GOSUB GET_ITEM_RANGE; GOSUB GET_LOC_RANGE }
20300 IF B_ZZS$=ZZS$ AND B_PRT$=PRT$ AND B_RNG$=RNG$ THEN CHG_FLG=0 ELSE CHG_FLG=1
20390 RETURN 
25000 ! 
25010 PRINT_REPORT:
25020 IF NOT(NUL(VIEW$)) THEN PRT$(2,2)=VIEW$
25030 K$=X3$(1,8)
25040 %B_WINDATE_FMT$=%WINDATE_FMT$,%WINDATE_FMT$="YYYYMMDD",JJ$=DTE(0:"%Yl%Mz%Dz"); CALL "ZZWDTE;VALIDATE",JJ$,JJJ$,JJJJ$; X3$(21,6)=JJ$
25045 IF POS(PRT_MODE$="QS")>0 THEN GOSUB REPORT_PRINT_MODE; CMD_STR$="END"; RETURN ! SSP 240570
25050 WRITE (Z[7],KEY=K$)X3$,X4$,T1$,PRT$,RNG$,ZZS$
25055 GOSUB GET_PROG
25060 IF RB_PRT$>"0" THEN CALL "ZZ2DRV",K9$ ELSE CALL K9$ ! SSP 229934
25070 CMD_STR$="END"
25080 RETURN 
26000 ! 
26010 GET_PROG:
26020 K9$="FM2CBA"
26030 IF POS("B"=RPT_OPT$)>0 THEN K9$="FM2CBB"
26090 RETURN 
28000 ! 
28010 GET_CUST_RANGE:
28020 IF NUL(CUST_START$) THEN RNG$+="          " ELSE CALL "ZZWLKU;PARSE_CUST",CUST_START$,DD$,CC$; RNG$+=DD$+CC$ ! SSP 206992
28030 IF NUL(CUST_END$) THEN RNG$=RNG$+"~~~~~~~~~~" ELSE CALL "ZZWLKU;PARSE_CUST",CUST_END$,DD$,CC$; RNG$=RNG$+DD$+CC$ } ! SSP 206992
28040 RETURN 
28050 ! 
28060 GET_ITEM_RANGE:
28070 IF NUL(ITEM_START$) THEN RNG$+="          " ELSE RNG$+=PAD(ITEM_START$,10," ") ! SSP 206992
28080 IF NUL(ITEM_END$) THEN RNG$+="~~~~~~~~~~" ELSE RNG$+=PAD(ITEM_END$,10," ") ! SSP 206992
28090 RETURN 
28100 ! 
28110 GET_LOC_RANGE:
28115 RNG$+=LOC_TYPE_START$ ! SSP 206992
28120 IF NUL(LOC_START$) THEN RNG$+=DIM(4) ELSE RNG$=RNG$+PAD(LOC_START$,4," ") ! SSP 206992
28125 IF NUL(LOC_TYPE_END$) THEN RNG$=RNG$+"~" ELSE RNG$=RNG$+PAD(LOC_TYPE_END$,1," ") ! SSP#220096                                                     
28130 IF NUL(LOC_END$) THEN RNG$=RNG$+"~~~~" ELSE RNG$=RNG$+PAD(LOC_END$,4," ") ! SSP 206992
28140 RETURN 
28150 ! 
28160 GET_GROUP_RANGE:
28170 IF NUL(GROUP_START$) THEN RNG$+="   " ELSE RNG$+=GROUP_START$
28180 IF NUL(GROUP_END$) THEN RNG$+="~~~" ELSE RNG$+=GROUP_END$
28190 RETURN 
28200 ! 
28210 GET_ACT_RANGE:
28220 IF NUL(ACT_START$) THEN RNG$+="      " ELSE RNG$+=ACT_START$
28230 IF NUL(ACT_END$) THEN RNG$+="~~~~~~" ELSE RNG$+=ACT_END$
28240 RETURN 
