1000 ! load the sequence range
1010 LOAD_RANGE:
1020 SWITCH RPT_SEQ$
1030 CASE "1"
1035 IF NUL(RNG$(1,10)) THEN CUST_START$="" ELSE CUST_START$=RNG$(1,10)
1040 IF RNG$(11,3)="~~~" THEN CUST_END$="" ELSE CUST_END$=RNG$(11,10)
1110 IF NUL(RNG$(21,10)) THEN ITEM_START$="" ELSE ITEM_START$=RNG$(21,10)
1120 IF RNG$(31,3)="~~~" THEN ITEM_END$="" ELSE ITEM_END$=RNG$(31,10)
1122 IF NUL(RNG$(41,1)) THEN LOC_TYPE_START$=" " ELSE LOC_TYPE_START$=RNG$(41,1) ! SSP#220096
1125 ! LOC_TYPE_START$=RNG$(41,1),LOC_TYPE_END$=RNG$(46,1) ! SSP 206992 !SSP#220096
1126 IF RNG$(46,1)="~" THEN LOC_TYPE_END$=" " ELSE LOC_TYPE_END$=RNG$(46,1) ! SSP#220096
1130 IF NUL(RNG$(42,4)) THEN LOC_START$="" ELSE LOC_START$=RNG$(42,4) ! SSP 206992
1140 IF RNG$(47,4)="~~~~" THEN LOC_END$="" ELSE LOC_END$=RNG$(47,4) ! SSP 206992!SSP#220096
1170 RETURN 
1490 END SWITCH 
1500 RETURN 
