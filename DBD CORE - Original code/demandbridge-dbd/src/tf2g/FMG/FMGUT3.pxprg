0050 PROCESS "FMGUT3","../FMG/FM.EN"
0060 EXIT 
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0100 SETERR 9000
0101 INIT:
0110 X0$="FS2UT3",X1$="Change Resupply in Days"
0120 DIM Z0$(80,"-")
0130 K0=20,K1=1,T0$="ZZXAR1"
0135 C9=-1
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,-1,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0300 REM "IOLISTS
0310 IOLIST A$,A9$,A[0],A[1],A[2],A[3],A[4],A[5],A[6],A[7],A[8],A[9],A[10],A[11],A[12],A[13],A[14],A[15]
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01O FM4...  13O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0585 RT_PARM$=""; CALL "RT2PRM",ERR=0586,X3$,X4$,RT_PARM$
0600 REM "
0610 GOSUB 6000
0620 DIM J[1],A[15]
0640 L9=0 ! CALL T0$,X3$,X4$,Y0$,W$,W{ALL},-1,C0,L9
0641 RETURN 
0650 X$="ZERO means no change to existing data, -1 means set field to zero"
0660 CALL "ZZENTR","N",J{ALL},A$,X4$,X3$,35,12,0,300,C0,"-##0","{3"+X$,"","FS2UT300","","",""
0670 CALL "ZZENTR","N",J{ALL},A$,X4$,X3$,35,13,1,300,C0,"-##0","{3"+X$,"","FS2UT302","","",""
0740 CALL "ZZPROM",".6 ZX2MMA",X3$,Z,"Change all forms now for the customers within the specified range?","","",0; ON Z GOTO 0741,0640,9900
0750 PROCEED:
0760 DIM W$(20,"~"); W$(1,10)=CUST_START$; IF STP(CUST_END$)<>"" THEN W$(11,10)=CUST_END$
0770 J(0)=MIM_DAYS,J(1)=RESTOCK_DAYS
0980 PRINT 'MESSAGE'("Progress will be reported every 100 entries...",0)
0990 READ (Z[1],KEY=W$(1,10),DOM=0991)
1000 REM 
1020 EXTRACT (Z[1],END=5000)IOL=0310
1040 IF A$(1,10)>W$(11,10) THEN GOTO 5000
1050 C1=C1+1; IF MOD(C1,100)=1 THEN GOSUB 2100
1100 IF J[0]>0 THEN A[1]=J[0] ELSE IF J[0]<0 THEN A[1]=0
1110 IF J[1]>0 THEN A[12]=J[1] ELSE IF J[1]<0 THEN A[12]=0
1140 WRITE (Z[1])IOL=0310; IF RT_PARM$<>"" THEN CUST$=A$(1,10); CALL "RT2WOC",ERR=1141,X3$,X4$,CUST$,"FM4...","U",A$(1,24)
1990 GOTO 1000
2100 REM 
2150 PRINT 'MESSAGE'(STR(C1)+".  "+A$(1,10)+"-"+A$(11,10)+"-"+A$(21,4),0),
2190 RETURN 
5000 REM "EOJ
5010 GOSUB 2100
5020 MSGBOX "Process complete!!",MSG("CONFIRMING"),"INFO,TIM=5)"; CMD_STR$="E"; RETURN 
5040 GOTO 9900
6000 REM "BACKGROUND
6001 RETURN 
6005 PRINT (0,ERR=6016)'SB',
6020 CALL T0$,X3$,X4$,Y0$,W$,W{ALL},2,0,L0
6040 PRINT @(15,10),"New Resupply quantity expressed in DAYS:"
6060 PRINT @(20,12),"Minumim DAYS:",@(20,13),"Restock DAYS:",
6165 PRINT (0,ERR=6166)'SF',
6190 RETURN 
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9045 REM 
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9055 REM 
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9901 END_PROG:
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9930 SETERR 9940; Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
