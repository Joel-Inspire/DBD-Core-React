13020 IF _CLR_FLG$="R" THEN REPOSITORY_CODE$=""
13030 IF _CLR_FLG$="R" THEN KEY_VALUE$="",CUSTOMER$="",INVOICE$="",TF_DATE$="",AUDIT_NO$=""
13040 IF _CLR_FLG$="R" THEN VERSION$=""
13050 DATE_DEPOSITED$=""
13060 TIME_DEPOSITED$=""
13070 DEPOSITED_BY$=""
13080 TF_DESC$=""
13090 REPOSITORY_FILE_NAME$=""
13100 FILE_INDEX$=""
13110 DATE_LAST_PRINTED$=""
13120 TIME_LAST_PRINTED$=""
13130 SOURCE_COMPANY$=""
13140 DATE_OF_SEC_ARCHIVE$=""
13150 TIME_OF_SEC_ARCHIVE$=""
13160 ZR1_UNUSED_1$=""
13170 NUM_OF_PAGES=0,CIA_NAME$=""
