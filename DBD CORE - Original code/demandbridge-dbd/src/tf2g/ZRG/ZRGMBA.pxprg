15160 IF _ORIG.TIME_OF_SEC_ARCHIVE$=_CUR.TIME_OF_SEC_ARCHIVE$ OR TIME_OF_SEC_ARCHIVE$=_CUR.TIME_OF_SEC_ARCHIVE$ THEN GOTO *NEXT ELSE IF _ORIG.TIME_OF_SEC_ARCHIVE$=TIME_OF_SEC_ARCHIVE$ THEN _CHG2$=_CHG2$+SEP+MSG("TIME_O_S_A")+" = "+_CUR.TIME_OF_SEC_ARCHIVE$,_CHG_VAR$(14,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("TIME_O_S_A")+" = "+_CUR.TIME_OF_SEC_ARCHIVE$
15170 IF _ORIG.ZR1_UNUSED_1$=_CUR.ZR1_UNUSED_1$ OR ZR1_UNUSED_1$=_CUR.ZR1_UNUSED_1$ THEN GOTO *NEXT ELSE IF _ORIG.ZR1_UNUSED_1$=ZR1_UNUSED_1$ THEN _CHG2$=_CHG2$+SEP+MSG("UNUSED")+" = "+_CUR.ZR1_UNUSED_1$,_CHG_VAR$(15,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("UNUSED")+" = "+_CUR.ZR1_UNUSED_1$
15180 IF _ORIG.NUM_OF_PAGES=_CUR.NUM_OF_PAGES OR NUM_OF_PAGES=_CUR.NUM_OF_PAGES THEN GOTO *NEXT ELSE IF _ORIG.NUM_OF_PAGES=NUM_OF_PAGES THEN _CHG2$=_CHG2$+SEP+MSG("NUM_O_PG")+" = "+STR(_CUR.NUM_OF_PAGES),_CHG_VAR$(16,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("NUM_O_PG")+" = "+STR(_CUR.NUM_OF_PAGES)
15990 RETURN 
