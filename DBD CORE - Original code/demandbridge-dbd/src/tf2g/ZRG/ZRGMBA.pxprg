13999 RETURN 
14000 ! 14000 - Enable/Disable groups - _ENABLE_FLG: 0=don't!, >1=corresponding key segment on, others off, -1=buttons and non-key fields on
14010 ENABLE_GROUPS:
14020 IF _ENABLE_FLG=0 THEN GOTO *RETURN
14030 IF _ENABLE_FLG=2 THEN CALL "*wingrp;Enable",KEY2.GRP$; NEXT_ID=KEY_VALUE.CTL ELSE CALL "*wingrp;Disable",KEY2.GRP$
14040 IF _ENABLE_FLG=3 THEN CALL "*wingrp;Enable",KEY3.GRP$; NEXT_ID=VERSION.CTL ELSE CALL "*wingrp;Disable",KEY3.GRP$
14970 IF _ENABLE_FLG>0 THEN CALL "*wingrp;Disable",FIELDS.GRP$; CALL "*wingrp;Disable",BUTTONS.GRP$
14980 IF _ENABLE_FLG<0 THEN CALL "*wingrp;Enable",FIELDS.GRP$; CALL "*wingrp;Enable",BUTTONS.GRP$
14990 RETURN 
15000 ! 15000 - Determine the changes that have been made before writing
15010 DETERMINE_CHGS:
15020 DIM _CHG_VAR$(16,"N")
15030 IF _ORIG.REPOSITORY_CODE$=_CUR.REPOSITORY_CODE$ OR REPOSITORY_CODE$=_CUR.REPOSITORY_CODE$ THEN GOTO *NEXT ELSE IF _ORIG.REPOSITORY_CODE$=REPOSITORY_CODE$ THEN _CHG2$=_CHG2$+SEP+MSG("REPOS_C")+" = "+_CUR.REPOSITORY_CODE$,_CHG_VAR$(1,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("REPOS_C")+" = "+_CUR.REPOSITORY_CODE$
15040 IF _ORIG.KEY_VALUE$=_CUR.KEY_VALUE$ OR KEY_VALUE$=_CUR.KEY_VALUE$ THEN GOTO *NEXT ELSE IF _ORIG.KEY_VALUE$=KEY_VALUE$ THEN _CHG2$=_CHG2$+SEP+MSG("KEY_VALUE")+" = "+_CUR.KEY_VALUE$,_CHG_VAR$(2,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("KEY_VALUE")+" = "+_CUR.KEY_VALUE$
15050 IF _ORIG.VERSION$=_CUR.VERSION$ OR VERSION$=_CUR.VERSION$ THEN GOTO *NEXT ELSE IF _ORIG.VERSION$=VERSION$ THEN _CHG2$=_CHG2$+SEP+MSG("VERSION")+" = "+_CUR.VERSION$,_CHG_VAR$(3,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("VERSION")+" = "+_CUR.VERSION$
15060 IF _ORIG.DATE_DEPOSITED$=_CUR.DATE_DEPOSITED$ OR DATE_DEPOSITED$=_CUR.DATE_DEPOSITED$ THEN GOTO *NEXT ELSE IF _ORIG.DATE_DEPOSITED$=DATE_DEPOSITED$ THEN _CHG2$=_CHG2$+SEP+MSG("DATE_D")+" = "+_CUR.DATE_DEPOSITED$,_CHG_VAR$(4,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("DATE_D")+" = "+_CUR.DATE_DEPOSITED$
15070 IF _ORIG.TIME_DEPOSITED$=_CUR.TIME_DEPOSITED$ OR TIME_DEPOSITED$=_CUR.TIME_DEPOSITED$ THEN GOTO *NEXT ELSE IF _ORIG.TIME_DEPOSITED$=TIME_DEPOSITED$ THEN _CHG2$=_CHG2$+SEP+MSG("TIME_D")+" = "+_CUR.TIME_DEPOSITED$,_CHG_VAR$(5,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("TIME_D")+" = "+_CUR.TIME_DEPOSITED$
15080 IF _ORIG.DEPOSITED_BY$=_CUR.DEPOSITED_BY$ OR DEPOSITED_BY$=_CUR.DEPOSITED_BY$ THEN GOTO *NEXT ELSE IF _ORIG.DEPOSITED_BY$=DEPOSITED_BY$ THEN _CHG2$=_CHG2$+SEP+MSG("DEPO_B")+" = "+_CUR.DEPOSITED_BY$,_CHG_VAR$(6,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("DEPO_B")+" = "+_CUR.DEPOSITED_BY$
15090 IF _ORIG.TF_DESC$=_CUR.TF_DESC$ OR TF_DESC$=_CUR.TF_DESC$ THEN GOTO *NEXT ELSE IF _ORIG.TF_DESC$=TF_DESC$ THEN _CHG2$=_CHG2$+SEP+MSG("DESC")+" = "+_CUR.TF_DESC$,_CHG_VAR$(7,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("DESC")+" = "+_CUR.TF_DESC$
15100 IF _ORIG.REPOSITORY_FILE_NAME$=_CUR.REPOSITORY_FILE_NAME$ OR REPOSITORY_FILE_NAME$=_CUR.REPOSITORY_FILE_NAME$ THEN GOTO *NEXT ELSE IF _ORIG.REPOSITORY_FILE_NAME$=REPOSITORY_FILE_NAME$ THEN _CHG2$=_CHG2$+SEP+MSG("REPO_F_N")+" = "+_CUR.REPOSITORY_FILE_NAME$,_CHG_VAR$(8,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("REPO_F_N")+" = "+_CUR.REPOSITORY_FILE_NAME$
15110 IF _ORIG.FILE_INDEX$=_CUR.FILE_INDEX$ OR FILE_INDEX$=_CUR.FILE_INDEX$ THEN GOTO *NEXT ELSE IF _ORIG.FILE_INDEX$=FILE_INDEX$ THEN _CHG2$=_CHG2$+SEP+MSG("FILE_INDEX")+" = "+_CUR.FILE_INDEX$,_CHG_VAR$(9,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("FILE_INDEX")+" = "+_CUR.FILE_INDEX$
15120 IF _ORIG.DATE_LAST_PRINTED$=_CUR.DATE_LAST_PRINTED$ OR DATE_LAST_PRINTED$=_CUR.DATE_LAST_PRINTED$ THEN GOTO *NEXT ELSE IF _ORIG.DATE_LAST_PRINTED$=DATE_LAST_PRINTED$ THEN _CHG2$=_CHG2$+SEP+MSG("DATE_L_P")+" = "+_CUR.DATE_LAST_PRINTED$,_CHG_VAR$(10,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("DATE_L_P")+" = "+_CUR.DATE_LAST_PRINTED$
15130 IF _ORIG.TIME_LAST_PRINTED$=_CUR.TIME_LAST_PRINTED$ OR TIME_LAST_PRINTED$=_CUR.TIME_LAST_PRINTED$ THEN GOTO *NEXT ELSE IF _ORIG.TIME_LAST_PRINTED$=TIME_LAST_PRINTED$ THEN _CHG2$=_CHG2$+SEP+MSG("TIME_L_P")+" = "+_CUR.TIME_LAST_PRINTED$,_CHG_VAR$(11,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("TIME_L_P")+" = "+_CUR.TIME_LAST_PRINTED$
15140 IF _ORIG.SOURCE_COMPANY$=_CUR.SOURCE_COMPANY$ OR SOURCE_COMPANY$=_CUR.SOURCE_COMPANY$ THEN GOTO *NEXT ELSE IF _ORIG.SOURCE_COMPANY$=SOURCE_COMPANY$ THEN _CHG2$=_CHG2$+SEP+MSG("SOUR_C")+" = "+_CUR.SOURCE_COMPANY$,_CHG_VAR$(12,1)="Y" ELSE _CHG1$=_CHG1$+SEP+MSG("SOUR_C")+" = "+_CUR.SOURCE_COMPANY$
