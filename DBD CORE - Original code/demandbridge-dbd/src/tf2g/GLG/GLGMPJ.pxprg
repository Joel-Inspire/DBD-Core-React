0360 IOLIST G0$
0362 IOLIST G1$
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="06O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0600 REM "
0620 GOSUB 6000
1020 DIM A$(50)
1700 GOTO 2000
1800 REM "
1820 CALL "ZZPROM","X0GL2MPJ",X3$,A,"","","",0
1830 ON A GOTO 7500,9900
2000 REM "DATA SEQ
2010 C0=0,X0=-1,X1=1
2020 C9=1,X$="",C0=ABS(C0),X0=X0+1; IF C0=2 THEN IF X0>0 THEN X0=X0-2
2025 IF C0>3 OR X0<0 THEN GOTO 1800
2035 IF X0*6+11<LEN(V9$) THEN IF V9$(X0*6+11,1)="2" THEN GOTO 2020
2040 ON X0 GOTO 2100,2150,2200,2250,2300,2350,1800
2100 REM "Copy From Company Number
2101 RETURN 
2110 SOURCE_CIA:! CALL "ZZENTR","SZX",A{ALL},A$,X4$,X3$,29,4+V0,1+K9,3,C0,"","{3"+X$,K9$,"GL2MPJ00","COMP","",""; IF ABS(C0)>4 THEN GOSUB 6400; ON C0 GOTO 2110,2111
2115 IF C0<0 THEN GOTO 9900
2120 DIM G0$(80); READ (Z[6],KEY="CMP"+A$(1+K9,3),DOM=2135)IOL=0360
2125 READ (Z[6],KEY=A$(1+K9,3)+"ZZP",DOM=2100)X4$
2135 ! PRINT @(35,4+V0),G0$(7,35),
2140 RETURN 
2150 REM "Copy to Company Number
2160 CALL "ZZENTR","ZX",A{ALL},A$,X4$,X3$,29,6+V0,4+K9,3,C0,"","{3"+X$,K9$,"GL2MPJ02","COMP","",""; IF ABS(C0)>4 THEN GOSUB 6400; ON C0 GOTO 2160,2161
2165 IF C0=-2 THEN GOTO 2100 ELSE IF C0=-4 THEN GOTO 9900
2170 READ (Z[6],KEY="CMP"+A$(4+K9,3),DOM=2150)IOL=0362
2175 PRINT @(35,6+V0),G1$(7,35),
2190 GOTO 2020
2200 REM "Remove Existing Accounts?
2205 IF C0<>2 THEN GOTO 2020
2210 CALL "ZZENTR","Y",A{ALL},A$,X4$,X3$,29,8+V0,7+K9,1,C0,"","{3"+X$,"","GL2MPJ04","","",""
2220 IF A$(7+K9,1)="Y" THEN A$(8+K9,1)=""; PRINT @(29,10+V0)," ",
2240 GOTO 2020
2250 REM "Overwrite Existing Account?
2255 IF A$(7+K9,1)="Y" THEN A$(8+K9,1)=""; PRINT @(29,10+V0)," "; GOTO 2020
2260 CALL "ZZENTR","Y",A{ALL},A$,X4$,X3$,29,10+V0,8+K9,1,C0,"","{3"+X$,"","GL2MPJ06","","",""
2290 GOTO 2020
2300 REM "Starting Account Number
2310 CALL "ZZENTR","A",A{ALL},A$,X4$,X3$,29,13+V0,9+K9,12,C0,"G/L","{3"+X$,"","GL2MPJ08","","",""
2340 GOTO 2020
2350 REM "Ending Account Number
2360 CALL "ZZENTR","A",A{ALL},A$,X4$,X3$,29,15+V0,21+K9,12,C0,"G/L","{3"+X$,"","GL2MPJ10","","",""
2390 GOTO 2020
6000 REM "BACKGROUND
6005 ! PRINT (0,ERR=6016)'SB',
6060 ! PRINT @(13,4+V0),"Source Company:",@(8,6+V0),"Destination Company:",@(3,8+V0),"Remove Existing Accounts?",@(1,10+V0),"Overwrite Existing Account?",@(0,11+V0),Z0$,
6070 ! PRINT @(4,13+V0),"Starting Account Number:",@(6,15+V0),"Ending Account Number:",@(0,17+V0),Z0$,
6080 ! PRINT 
6165 ! PRINT (0,ERR=6166)'SF',
6190 RETURN 
6200 REM "DISPLAY DATA
6215 GOSUB 6450
6220 PRINT @(29,4+V0),A$(1+K9,3),@(29,6+V0),A$(4+K9,3),@(29,8+V0),A$(7+K9,1),@(29,10+V0),A$(8+K9,1),
6224 CALL "ZZDISP","A",A$(9+K9,12),"G/L",X3$,"","",29,13+V0,X4$
6228 CALL "ZZDISP","A",A$(21+K9,12),"G/L",X3$,"","",29,15+V0,X4$
6232 PRINT 
6240 IF G0$>"" THEN PRINT @(35,4+V0),G0$(7,30),
6245 IF G1$>"" THEN PRINT @(35,6+V0),G1$(7,30),
6390 RETURN 
6400 REM "WHOLE SCREEN
6405 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,X5$,X0,X1,0
6410 GOSUB 6000
6430 IF C9>=0 THEN GOSUB 6200 ELSE GOSUB 6450
6440 IF ABS(C0)>4 THEN C0=ABS(C0)-5
6445 RETURN 
6450 REM "DISPLAY KEYS
6455 IF C9<0 THEN GOTO 6445
6490 RETURN 
6500 REM "DELETE
6510 REMOVE (Z[1],KEY=A1$,DOM=6511)
6590 GOTO 1630
6600 REM "ALT KEY DATA READS
6690 RETURN 
6700 REM "ADD ENTRY
6705 IF Z9=0 THEN GOTO 6790
6710 WRITE (Z[1],KEY=A1$)IOL=0310
6790 GOTO 1630
6800 REM "NEXT ENTRY IN FILE
6810 A1$=KEY(Z[1],END=1140)
6820 A$(1,LEN(A1$))=A1$
6825 IF A1$(1,LEN(K9$))<>K9$ THEN GOTO 1140
6830 GOSUB 6600
6835 GOSUB 6450
6890 Z9=0; GOTO 1515
6900 REM "GET DEFAULTS
6902 V9$="2904  2906  2908  2910  2913  2915  "
6910 IF V9>=0 THEN READ (Z[6],IND=V9)V9$,IOL=0310; GOTO 6930 ELSE V9=-1
6920 EXTRACT (Z[6],KEY=X0$+"DFLT",DOM=6921)V9$,IOL=0310; V9=IND(Z[6]); READ (Z[6])
6930 RETURN 
6950 REM "WRITE DEFAULT
6955 WRITE (Z[6],KEY=X0$+"DFLT")V9$,IOL=0310
6960 GOSUB 6920; GOTO 1630
6970 REM "ENTRY DEFAULTS
6975 PRINT 'CF'; V9=-2,Q$=""
6980 FOR X=1 TO LEN(V9$) STEP 6
6982 PRINT @(NUM(V9$(X,2)),NUM(V9$(X+2,2))),; IF V9=-2 THEN PRINT V9$(X+4,1), ELSE READ RECORD (0,SIZ=1)Q$; IF POS(Q$="1234Z")=0 THEN PRINT 'RB'; GOTO 6982
6990 IF Q$="Z" THEN EXITTO 6950 ELSE V9$(X+4,LEN(Q$))=Q$; NEXT X
6995 V9=0; GOTO 6980
7500 COPY_FILES:
7510 PRINT 'DIALOGUE'(15,24,80,6),'CS',
7520 Z$="01O GL1"+A$(1+K9,3)+"  02O GL1"+A$(4+K9,3)+"  "
7525 Z$=Z$+"03O GL3"+A$(K9+4,3)+"  "
7540 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 7541,9900
7550 REM "Added stmts: 
7575 REM "Deleted stmts: 
7600 REM 
7610 CALL "ZZINFO",Z[1],Q,X3$,R0,R1,0,0,0,0,0,""
7620 CALL "ZZINFO",Z[2],Q,X3$,R2,R3,0,0,0,0,0,""
7625 CALL "ZZINFO",Z[3],Q,X3$,R9,0,0,0,0,0,0,""
7640 IF R9>0 THEN IF A$(7+K9,1)="Y" THEN MSGBOX MSG("COMPANY")+" "+A$(4+K9,3)+" "+MSG("MPJ_MES"),"!","OK,CANCEL",OP$; IF OP$="OK" THEN GOTO 7650 ELSE GOTO 9900
7700 REM "COPY STUFF
7702 S0$=A$(9)
7705 IF A$(7+K9,1)<>"Y" THEN GOTO 7800
7720 Z$="02I "+"GL1"+A$(4+K9,3)+"  ",Z$=Z$+"02O "+Z$(5)
7730 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 7731,9900
7800 REM "COPY
7810 EXTRACT (Z[1],KEY=S0$(1,12),DOM=7811)
7820 K$=KEY(Z[1],END=7890); READ RECORD (Z[1])A$; IF A$(1,12)>S0$(13,12) THEN GOTO 7890
7822 PRINT @(0,1),'CL',@(0,1),MSG("NOW_PROC")+" "+MSG("ACCT")+": ",
7825 PRINT @(25,1),A$(1,12),"- ",A$(13,35),
7830 WRITE RECORD (Z[2],KEY=K$,DOM=7840)A$; GOTO 7820
7840 IF A$(8+K9,1)<>"Y" THEN GOTO 7820 ELSE WRITE RECORD (Z[2],KEY=K$)A$; GOTO 7820
7850 GOTO 7820
7890 PRINT @(0,1),'CL',@(10,1),"**** ",MSG("MPJ_MSG1")," ****",
7895 WAIT 1 ! CALL "ZZPROM","4",X3$,A,"","","",0; GOTO 9900
7900 GOTO 9900
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9900
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9900 REM "END PROGRAM
9905 CMD_STR$="END"; PRINT 'POP',
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9920 SETERR 9940
9930 Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
10000 SELECT_CIA:
10010 CIA$=EVS(ID$+"$")
10015 IF CIA$="" THEN GOTO *RETURN
10020 FIND (Z(6),KEY="CMP"+CIA$,DOM=NO_CIA)CIA_REC$
10030 IF ID$="ML_CIA_SOURCE" THEN A$(1+K9,3)=CIA$,ML_SC_NAME$=CIA_REC$(7,35); GOSUB SOURCE_CIA ELSE ML_SC_NAME1$=CIA_REC$(7,35),A$(4+K9,3)=CIA$
10040 REFRESH_FLG=1
10050 RETURN 
10100 NO_CIA:
10110 MSGBOX MSG("REC_NOTFND")+" :"+CIA$,"!Warning","!",OP$
10120 EXECUTE ID$+"$="+""""""
10130 IF ID$="ML_CIA_SOURCE" THEN ML_SC_NAME$="",NEXT_ID=ML_CIA_SOURCE.CTL ELSE ML_SC_NAME1$="",NEXT_ID=ML_CIA_DESTINATION.CTL
10140 REFRESH_FLG=1
10150 RETURN 
11000 PROCEED:
11010 VARLST$=_VAR_LST$(2),XXX=POS("BUTTON"=VARLST$),VARLST$=VARLST$(1,XXX-1)
11020 XX=POS(","=VARLST$); IF XX=0 THEN GOTO NXT_STEP
11030 VAR$=VARLST$(1,XX-1),VARLST$=VARLST$(XX+1)
11040 VAR_VALUE$=EVS(VAR$)
11050 IF VAR_VALUE$="" THEN MSGBOX MSG("REQ_IN"),"!Warning","!",OP$; NEXT_ID=EVN(VAR$(1,LEN(VAR$)-1)+".ctl"); RETURN 
11060 GOTO 11020
11070 NXT_STEP:
11080 A$(1+K9,3)=ML_CIA_SOURCE$,A$(4+K9,3)=ML_CIA_DESTINATION$,A$(7+K9,1)=CB_REA$,A$(8+K9,1)=CB_OEA$
11090 A$(9+K9,12)=GL_ACCT$,A$(21+K9,12)=GL_ACCT1$
11110 GOTO COPY_FILES
