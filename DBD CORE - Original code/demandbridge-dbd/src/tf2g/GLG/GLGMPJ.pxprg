0050 PROCESS "GLGMPJ","../GLG/GL.EN"
0060 EXIT 
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0095 INIT:
0100 SETERR 9000
0110 X0$="GL2MPJ",X1$="Copy Company Chart of Accounts"
0120 DIM Z0$(80,"-")
0135 C9=-1,V9=-2
0200 REM "
0240 X3$=""; CALL "ZZCOMP",X0$,X1$,"*",X3$,X4$,M9$,-1,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0290 K9$="CMP",K9=0
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
