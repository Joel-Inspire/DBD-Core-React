0050 PROCESS "GLGSYS","../GLG/GL.EN"
0060 EXIT 
0090 CLEAR ; SETERR 0100; ENTER X3$,X4$,Q0$,Q1$
0095 INIT:
0100 SETERR 9000
0110 X0$="GL2SYS",X1$="G/L Files Setup",K9$="GL2SYS",K9=6,%GUI=1
0120 DIM Z0$(80,"-")
0130 K0=3,K1=1
0135 C9=-1,V9=-2
0140 M0$="-####,##0"
0150 REM SPECIAL NUMERIC DEFAULTS
0155 REM "G/L=M0$"
0160 M0$="-##,##0"
0190 DEF FNP(Q$)=INT(POS(Q$=V0$,8)/8+.9)
0200 REM "
0240 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,M9$,-1,X1,X2; IF X1>0 THEN GOTO 9920
0245 IF X3$(66,1)>"2" THEN PRECISION NUM(X3$(66,1),ERR=0246)
0290 K9$=PGN,K9$=K9$(POS("/"=K9$,-1)+1),K9=LEN(K9$)
0295 DIM Z0$(80,X3$(235,1)); Z0$=MNM('GS')+Z0$+MNM('GE')
0300 REM "IOLISTS
0310 IOLIST A$(1,LEN(A$)),A[0],A[1],A[2],A[3],A[4]
0320 IOLIST B$
0500 REM "FILES
0505 DIM Z[NUM(X3$(60,3))]
0510 Z$="01X ZZT...  02O ZZE...  06O ZZPARM  "
0520 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1; ON Z0 GOTO 0521,9900
0530 Z$="03OXGL1...  "
0535 PRINT 'DIALOGUE'(5,10,80,3,X1$)
0540 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,0
0542 PRINT 'POP',
0545 IF Z[3]>0 THEN CLOSE (Z[3])
0580 READ (Z[6],KEY=X3$(9,3)+"G/L",DOM=8000)F0$
0600 REM "
0620 GOSUB 6000
1000 REM "
1010 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,X5$,-1,X1,X2
1035 DIM A$(4+K9),A[4]
1045 A$(1,0+K9)=K9$+A1$
1060 GOSUB 6450; GOTO 1100
1070 GOSUB 6000; GOSUB 6450
1100 REM "KEY SEQ
1110 X0=-1,C0=0,X1=0,C9=0,Z9=0
1120 C0=ABS(C0),X$=""; IF C0=2 AND X0>0 THEN X0=X0-1 ELSE IF C0<>2 THEN X0=X0+1; IF C0=4 THEN GOTO 9900
1140 ON X0 GOTO 1200,1500
1200 REM "Company code
1205 A$(1+K9,3)=X3$(9,3),ML_CIA_CODE$=X3$(9,3); GOSUB 6450; GOTO 1220
1210 CALL "ZZENTR","ZXUX",A{ALL},A$,X4$,X3$,14,3+V0,1+K9,3,C0,"","{1"+X$,K9$,"AP2SYS00","ZZT","",""; IF ABS(C0)>4 THEN GOSUB 6400; ON C0 GOTO 1210,1211
1215 IF C0<0 THEN GOTO 9900
1220 READ (Z[6],KEY="CMP"+A$(1+K9,3),DOM=9800)N1$
1225 ML_CIA_NAME$=N1$(7,35),REFRESH_FLG=1 ! PRINT @(35,3),N1$(7,35),
1240 GOTO 1120
1500 REM "
1505 Z9=-1
1510 A1$=K9$+A$(LEN(K9$)+1,3),A$(1,LEN(K9$))=K9$
1520 READ (Z[1],KEY=A1$,DOM=1600)IOL=0310
1525 Z9=0
1590 GOTO 1700
1600 REM "
1620 MSGBOX MSG("CONTINUE?"),MSG("NOF"),"!,YESNO",OPT$; IF OPT$="N" THEN GOTO 9900 ELSE RETURN ! CALL "ZZPROM","2",X3$,Z,"","","",0; ON Z GOTO 1650,1630,6975
1630 GOTO 9900
1660 IF V9>=0 THEN GOSUB 6200
1690 GOTO 2000
1700 REM "
1790 GOSUB 6200
1800 REM "
1820 CALL "*WINGRP;ENABLE",BT_1.GRP$; NEXT_ID=ML_NUM_ACCT.CTL; RETURN ! CALL "ZZPROM","X0SYSDEF",X3$,S3,"","","",0
1825 ON S3 GOTO 2000,6500,8200,6970,6700
1830 GOTO 2000
1850 REM "MODIFY
1855 X0=X0-1; IF Z9=1 THEN GOTO 1880 ELSE IF Z9=0 THEN Z9=1
1860 EXTRACT (Z[1],KEY=A1$,DOM=1870)IOL=0310
1865 C9=1
1870 GOSUB 6200
1890 IF Z<0 THEN GOTO 2035 ELSE GOTO 2000
2000 REM "DATA SEQ
2010 C0=0,X0=-1,X1=1
2020 C9=1,X$="",C0=ABS(C0),X0=X0+1; IF C0=2 THEN IF X0>0 THEN X0=X0-2
2025 IF C0>3 OR X0<0 THEN GOTO 1800
2035 IF X0*6+11<LEN(V9$) THEN IF V9$(X0*6+11,1)="2" THEN GOTO 2020
2040 ON X0 GOTO 2100,1800
2100 REM "G/L ACCOUNTS
2105 SEL_GL_NUM_ACCT:
2110 A(0)=ML_NUM_ACCT
2120 CALL "*WINGRP;ENABLE",BT_1.GRP$
2130 GOSUB WRITE_REC
2140 RETURN 
6000 REM "BACKGROUND
6005 ! PRINT (0,ERR=6016)'SB',
6060 ! PRINT @(0,3+V0),"Company Code:",@(21,3+V0),"Company Name:",@(0,4+V0),Z0$,
6070 ! PRINT @(11,7+V0),"Number of G/L Accounts:",
6075 ! PRINT @(0,9+V0),Z0$,
6080 PRINT 
6165 ! PRINT (0,ERR=6166)'SF',
6190 RETURN 
6200 REM "DISPLAY DATA
6215 GOSUB 6450
6220 ML_NUM_ACCT=A(0),REFRESH_FLG=1 ! PRINT @(35,7+V0),A[0]:M0$,
6390 RETURN 
6400 REM "WHOLE SCREEN
6405 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,X5$,X0,X1,0
6420 GOSUB 6000
6430 IF C9>=0 THEN GOSUB 6200 ELSE GOSUB 6450
6440 IF ABS(C0)>4 THEN C0=ABS(C0)-5
6445 RETURN 
6450 REM "DISPLAY KEYS
6455 IF C9<0 THEN GOTO 6445
6460 ! PRINT @(14,3+V0),A$(1+K9,3),
6465 IF N1$>"" THEN ! PRINT @(35,3+V0),N1$(7,35),
6490 RETURN 
6500 DELETE_REC:
6505 IF Z[3]>0 THEN MSGBOX MSG("FILE_READY"),"","",OPT$; RETURN 
6510 REMOVE (Z[1],KEY=A1$,DOM=6511)
6590 CMD_STR$="END"; RETURN 
6600 REM "ALT KEY DATA READS
6690 RETURN 
6700 WRITE_REC:
6710 WRITE (Z[1],KEY=A1$)IOL=0310
6790 RETURN 
6800 REM "NEXT ENTRY IN FILE
6810 A1$=KEY(Z[1],END=1140)
6820 A$(1,LEN(A1$))=A1$
6825 IF A1$(1,LEN(K9$))<>K9$ THEN GOTO 1140
6830 GOSUB 6600
6835 GOSUB 6450
6890 GOTO 1515
6970 DELETE_FILES:
6975 MSGBOX MSG("DELETE_FLS"),"","?,YESNO",OPT$; IF OPT$="NO" THEN RETURN ! CALL "ZZPROM","X1SYSDEF",X3$,S3,"","","",0; ON S3 GOTO 6976,1800
6980 GOSUB 7500
6985 Q$="E"; GOSUB 7700
6990 GOTO 9900
7500 REM "GET FILE NAMES
7505 V0$="",V=1; DIM V[30]
7510 Q$="GL"; READ (Z[2],KEY=Q$,DOM=7511)
7520 READ (Z[2],END=7590)IOL=0320
7530 IF B$(1,LEN(Q$))<>Q$ THEN GOTO 7590
7540 V0$=V0$+B$(1,3)+"...  ",V[V]=NUM(B$(54,4)),V=V+1
7560 GOTO 7520
7590 RETURN 
7600 REM "DETERMINE ACTUAL FILE SIZES BASED ON VOLUMES
7605 V[FNP("GL1")]=A[0]
7610 V[FNP("GL2")]=A[0]*NUM(F0$(27,2)); IF F0$(29,1)>"0" THEN V[FNP("GL2")]=V[FNP("GL2")]*NUM(F0$(29,1))
7615 V[FNP("GL3")]=A[0]+A[0]*NUM(F0$(30,2))
7620 V[FNP("GLF")]=A[0]+10
7690 RETURN 
7700 REM "DEFINE THE FILES
7720 CALL "ZZGSYS",X3$,Q$,V0$,0
7730 CMD_STR$="E"
7790 RETURN 
8000 REM 
8010 CALL "ZZPROM","4",X3$,S3,"The G/L Parameters have not been set for this company.","","",0; GOTO 9800
8200 REM "
8205 DEFINE_FILES:
8210 IF Z[3]>0 THEN MSGBOX MSG("FILE_READY"),"","",OPT$; RETURN ! CALL "ZZPROM","4",X3$,S3,"Files are already defined for this company.","","",0; GOTO 1800              
8235 MSGBOX MSG("DEF_FILES"),MSG("CONFIRM"),"?,YESNO",OPT$; IF OPT$<>"YES" THEN RETURN 
8240 ON S3 GOTO 8241,9900
8245 GOSUB 7500; Q$="D"; GOSUB 7700
8246 GOTO 9900
8250 CALL "ZZ2SYS",X3$,V0$,V{ALL},A$(1+K9,3),"S",S9,S8,S7
8260 D=NUM(X3$(31,1)); CALL "ZZAVSP",X3$,A0,A1,C{ALL},D
8265 Q$=""
8270 IF A1<S7 THEN Q$="Large enough block space unavailable on disk "+STR(D)
8275 IF A0<S9 THEN Q$="Not enough space available on disk "+STR(D)
8280 IF Q$="" THEN GOTO 8300
8285 CALL "ZZPROM","4",X3$,S3,Q$+".","","",0
8290 GOTO 1800
8300 REM "DEFINE FILES
8305 Q$=FN%DSD$("D"+STR(D)); Q$=Q$(7,4)
8310 PRINT @(0,3),'CE',@(14,5),"Defining the G/L files for this company will require",@(10,7),"approximately ",S9:M1$," sectors out  of a total of ",A0:M1$,@(10,9),"sectors available on disk ",D," ( Volume name: ",Q$,") .",
8320 CALL "ZZPROM","Y",X3$,S3,"Do you wish to continue with the file definition?","","",0
8325 ON S3 GOTO 8326,8395
8370 GOSUB 7700
8390 GOTO 9900
8395 GOSUB 6400; GOTO 1800
8600 REM "GET VOLUMES FOR SELECT FILES
9000 REM "ERROR PROCESSING
9005 IF ERR=69 THEN GOTO 9500
9010 Y5=ERR,Y6=TCB(5)
9015 SETERR 9016; Y8$=LST(PGM(Y6))
9016 SETERR 9000
9040 CALL "ZZERRM",Y8$,X0$,Y7$,X3$,Y5,Y6,Y7,Y8,0
9050 ON Y7 GOTO 9060,9100,9800,9070,9090
9060 RETRY 
9070 SETERR 9080
9075 EXECUTE Y7$
9080 SETERR 9000; RETRY 
9090 SETERR 0000; RETRY 
9100 REM " TRANSFER CONTROL
9180 GOTO 0990
9190 GOTO 9800
9300 SETESC 9350
9310 SETERR 9350
9315 IF X3$(47,1)="N" THEN RETURN ELSE SETESC 0000; RETURN 
9350 SETERR 9000; RETURN 
9500 REM "CTRL LOGIC
9510 SETERR 9000; GOSUB 6400
9520 ON C9 GOTO 1140,2040
9800 REM "EXIT PROGRAM
9900 REM "END PROGRAM
9905 CMS_STR$="END"
9910 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
9920 SETERR 9940
9930 Q1$=A1$; EXIT 
9940 SETESC 9350
9950 RUN "ZMENU"
9999 END 
