1025 R0=R0+1; IF MOD(R0,T0)=1 THEN C=R0; GOSUB 8150
1030 A[0]=0
1040 WRITE (Z[1])IOL=0310
1050 GOTO 1020
1100 REM "PROCESS OPEN INVOICES
