1200 READ (Z[2],END=5000)IOL=0320
1220 R0=R0+1; IF MOD(R0,T0)=1 THEN C=R0; GOSUB 8150
1300 IF L$<>B$(1,10) THEN GOSUB 3000
1320 T=T+B[13]
1340 GOTO 1200
3000 REM VENDOR CHANGE
3020 IF L$="" THEN GOTO 3080
3030 DIM A$(38),A[6]
3040 EXTRACT (Z[1],KEY=L$,DOM=3041)IOL=0310
3050 A$(1,10)=L$,A[0]=T
3060 WRITE (Z[1],KEY=A$(1,10))IOL=0310
3080 L$=B$(1,10),T=0
3090 RETURN 
