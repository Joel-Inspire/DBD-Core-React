0100 ! 100 - Initialization
0110 INIT:
0120 ! 
0130 X0$="UTGIC0"
0140 X0=-1; X2=-1
0150 CALL "ZZCOMP",X0$,X1$,X2$,X3$,X4$,X5$,X0,X1,X2
0160 ! 
0170 ! Dim Variables
0180 DIM Z[NUM(X3$(60,3))],IC0[40],AP5[6]
0190 ! 
0195 DIM VEND_NUM$[100,2],PD_CODE$[100,2],UM_CODE$[100,2],CUST_CODE$[100,2],PL_CODE$[100,2]
0200 ! open files
0210 Z$="01O IC0...  02O AP4...  03O FMP...  04O AR1...  05O FM0...  06O ZZPARM  "
0220 CALL "ZZFLES",X3$,Y1$,Y0$,Z$,Z{ALL},Z0,Z1
0225 READ (Z(6),KEY=X3$(9,3)+"I/C")IC$
0300 ! iolist
0310 IOLIST IC0$,IC0{ALL}
0320 IOLIST AP4$,AP4{ALL}
0330 IOLIST AP3$,AP3{ALL}
0340 IOLIST GL1$
0350 IOLIST ZYB$
0400 ! 
0450 PROS_FLG=0
0485 REFRESH_FLG=1
0500 ! 500 - Main panel post_display logic
0510 MAIN_POST_DISPLAY:
0520 ! 
0530 CALL "$CTL-10;PB_CREATE",0,0,17,1.4,20,1,0
0540 GOSUB PROCESS_FILE; GOSUB WRAPUP; EXIT 
0570 RETURN 
0900 ! 900 - Wrapup
0910 WRAPUP:
0920 CALL "ZZFLES",X3$,Y1$,Y0$,"END",Z{ALL},0,0
0930 %YES=1; PROCESS "ICGUT8","../ICG/IC.EN"
0940 IF ARGUT8 THEN PROCESS "ARGUT8","../ARG/AR.EN","YES"
0970 RETURN 
1000 ! Get the vendors info
1010 PROCESS_FILE:
1020 KEY_1$=""; COUNT=0
1030 READ (Z[1],KEY=KEY_1$,DOM=*NEXT)
1040 KEY_1$=KEY(Z[1],END=END_ROUTINE); READ (Z[1])IOL=0310
1050 FIND (Z[2],KEY=IC0$(82,10),DOM=VEND_ERR)
1060 FIND (Z[3],KEY="T"+IC0$(61,3),DOM=PROD_ERR)
1070 FIND (Z[6],KEY="U/M"+IC0$(120,4),DOM=SELL_ERR)
1075 FIND (Z[6],KEY="U/M"+IC0$(124,4),DOM=INV_ERR)
1080 IF NOT(NUL(IC0$(1,10))) THEN FIND (Z[4],KEY=IC0$(1,10),DOM=CUST_ERR)
1095 ++COUNT; CALL "$CTL-10;PB_VALUE",COUNT
1100 IF POS(IC0$(117,1)="YN")=0 THEN IC0$(117,1)="N"
1105 IF POS(IC0$(112,1)="YN")=0 THEN IC0$(112,1)=IC$(69,1)
1290 WRITE (Z[1],KEY=KEY_1$)IOL=0310
1299 GOTO 1040
1300 RETURN 
1500 ! Process Vendor
1510 VEND_ERR:
1520 DIM BB$(426); BB$(1,10)=IC0$(82,10),BB$(11,35)="** NOF **",BB$(246,1)="A",BB$(290,1)="G",BB$(288,2)="00",BB$(291,1)="N",BB$(231,1)="N",BB$(293,1)="N",BB$(286,2)="01",BB$(247,2)="01",BB$(283,3)="A  "
1530 WRITE (Z(2),KEY=BB$(1,10))BB$
1580 GOTO 1060
1590 REFRESH_FLG=1
1595 RETURN 
1600 ! Process Product code
1605 PROD_ERR:
1608 DIM BB$(61); BB$(1,4)="T"+IC0$(61,3),BB$(5,15)="** NOF **",BB$(23,1)="Y",BB$(50,1)="N"
1610 WRITE (Z(3),KEY=BB$(1,4))BB$
1645 GOTO 1070
1650 REFRESH_FLG=1
1655 RETURN 
1700 ! 
1705 SELL_ERR:
1710 DIM BB$(21); BB$(1,7)="U/M"+IC0$(120,4),BB$(8,10)="** NOF **",BB$(20,2)="NN"
1720 WRITE (Z[6],KEY=BB$(1,7))BB$
1745 GOTO 1075
1750 REFRESH_FLG=1
1755 RETURN 
1800 ! Get the Vendor Information
1805 INV_ERR:
1810 DIM BB$(21); BB$(1,7)="U/M"+IC0$(124,4),BB$(8,10)="** NOF **",BB$(20,2)="NN"
1820 WRITE (Z[6],KEY=BB$(1,7))BB$
1845 GOTO 1080
1850 REFRESH_FLG=1
1855 RETURN 
1900 ! Get the Customer Information
1905 CUST_ERR:
1908 JJ$=DTE(0:"%Mz%Dz%Yl"); CALL "ZZWDTE;VALIDATE",ERR=*NEXT,JJ$
1910 DIM BB$(599); BB$(1,10)=IC0$(1,10),BB$(11,35)="** NOF **",BB$(155,10)="**NOF**",BB$(219,1)="A",BB$(220,9)="001000000",BB$(229,6)=JJ$,BB$(235,10)="00",BB$(278,4)="0000",BB$(359,2)="01",BB$(361,1)="N" ! SSP 228169
1920 WRITE (Z(4),KEY=BB$(1,10))BB$
1930 ARGUT8=1
1945 GOTO 1090
1950 REFRESH_FLG=1
1955 RETURN 
2000 ! Find The changes requested
2010 FIND_CHANGE:
2015 ARRAY_LINE=0
2020 SWITCH ERR_FLG
2030 CASE 1
2040 FOR XX=1 TO 100
2050 IF NUL(VEND_NUM$[XX,1]) THEN NOT_FOUND=1; ARRAY_LINE=XX; XX=100; GOTO 2090
2060 MATCH$=VEND_NUM$[XX,1]
2070 IF MATCH$(1,10)<>IC0$(82,10) THEN GOTO 2090
2080 IC0$(82,10)=VEND_NUM$[XX,2]
2085 GOSUB WRITE_REC
2087 XX=100
2090 NEXT XX
2095 BREAK
2100 CASE 2
2110 FOR XX=1 TO 100
2120 IF NUL(PD_CODE$[XX,1]) THEN NOT_FOUND=1; ARRAY_LINE=XX; XX=100; GOTO 2170
2130 MATCH$=PD_CODE$[XX,1]
2140 IF MATCH$(1,3)<>IC0$(61,3) THEN GOTO 2170
2150 IC0$(61,3)=PD_CODE$[XX,2]
2160 GOSUB WRITE_REC
2165 XX=100
2170 NEXT XX
2180 BREAK
2200 CASE 3
2210 FOR XX=1 TO 100
2220 IF NUL(UM_CODE$[XX,1]) THEN NOT_FOUND=1; ARRAY_LINE=XX; XX=100; GOTO 2270
2230 MATCH$=UM_CODE$[XX,1]
2240 IF MATCH$(1,4)<>IC0$(120,4) THEN GOTO 2270
2250 IC0$(120,4)=T_CODE$[XX,2]
2260 GOSUB WRITE_REC
2265 XX=100
2270 NEXT XX
2280 BREAK
2300 CASE 4
2310 FOR XX=1 TO 100
2320 IF NUL(UM_CODE$[XX,1]) THEN NOT_FOUND=1; ARRAY_LINE=XX; XX=100; GOTO 2370
2330 MATCH$=UM_CODE$[XX,1]
2340 IF MATCH$(1,12)<>IC0$(124,4) THEN GOTO 2370
2350 IC0$(124,4)=UM_CODE$[XX,2]
2360 GOSUB WRITE_REC
2365 XX=100
2370 NEXT XX
2380 BREAK
2400 CASE 5
2410 FOR XX=1 TO 100
2420 IF NUL(CUST_CODE$[XX,1]) THEN NOT_FOUND=1; ARRAY_LINE=XX; XX=100; GOTO 2480
2430 MATCH$=CUST_CODE$[XX,1]
2440 IF MATCH$(1,10)<>IC0$(1,10) THEN GOTO 2480
2450 IC0$(1,10)=CUST_CODE$[XX,2]
2460 GOSUB WRITE_REC
2470 XX=100
2480 NEXT XX
2490 BREAK
2800 END SWITCH 
2900 RETURN 
