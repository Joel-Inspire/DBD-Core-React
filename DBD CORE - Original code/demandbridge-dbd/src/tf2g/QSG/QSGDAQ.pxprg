14000 ! 14000 - Enable/Disable groups - _ENABLE_FLG: 0=don't!, >1=corresponding key segment on, others off, -1=buttons and non-key fields on
14010 ENABLE_GROUPS:
14020 IF _ENABLE_FLG=0 THEN GOTO *RETURN
14030 IF _ENABLE_FLG=2 THEN CALL "*wingrp;Enable",KEY2.GRP$; NEXT_ID=QUOTE_NUM.CTL ELSE CALL "*wingrp;Disable",KEY2.GRP$
14970 IF _ENABLE_FLG>0 THEN CALL "*wingrp;Disable",FIELDS.GRP$; CALL "*wingrp;Disable",BUTTONS.GRP$
14980 IF _ENABLE_FLG<0 THEN CALL "*wingrp;Enable",FIELDS.GRP$; CALL "*wingrp;Enable",BUTTONS.GRP$
14990 RETURN 
15000 CHECK_COMPLETE_FLAG:! 15000,10 IF Complete flag set now, but not earlier, then email the salesperson. COMPLETE_FLAG_PREV$ must be set when read
15010 IF POS(%X3$(9,3)="288500",3)=0 THEN GOTO CCF_DONE
15020 IF COMPLETE_FLAG_PREV$="Y" OR QUOTE_COMPLETE$<>"Y" THEN GOTO CCF_DONE
15030 DIM EML_P$(512); FIND (_ZZP,KEY=%X3$(9,3)+"EML",DOM=*NEXT)EML_P$(1)
15040 SWITCH %X3$(9,3)
15050 CASE "500"; FROMADDRESS$="rfq@topform.com",REPLAY_ADDRESS$="rfq$topform.com"; BREAK
15060 CASE "288"; FROMADDRESS$="rfq@data-source.com",REPLAY_ADDRESS$="rfq$data-source.com"; BREAK
15070 END SWITCH 
15080 READ (_EML,KEY="CS"+QUOTE_SPER$,KNO=1,DOM=*NEXT)
15090 EML_KEY$=KEY(_EML,END=CCF_DONE); IF EML_KEY$(1,6)<>"CS"+QUOTE_SPER$ THEN GOTO CCF_DONE
15100 READ (_EML,KEY=EML_KEY$,REC=EML$,DOM=CCF_DONE); IF NUL(EML.EMAIL_ADDRESS$) THEN GOTO CCF_DONE
15110 SUBJECT$="RFQ: "+FN%ZZDISP$(QUOTE_DIV$+QUOTE_NUM$,"O/P")+" has been marked as completed by "+%X3$(40,3)
15120 MESSAGE$=SUBJECT$
15130 CALL "*web/email",FROMADDRESS$,REPLYADDRESS$,STP(EML.EMAIL_ADDRESS$),CCADDRESS$,BCCADDRESS$,SUBJECT$,MESSAGE$,ATTACHMENTS$,"N",STP(EML_P$(7,60)),SERVERTIMEOUT,LINEWRAPSAT,BODYENCODING$,ERASEIT,ERRORMESG$
15140 CWDIR HWD
15150 CCF_DONE:
15160 COMPLETE_FLAG_PREV$=QUOTE_COMPLETE$
15170 RETURN 
