11060 _X$="TOTAL_COMM",_X=TOTAL_COMM.CTL,TOTAL_COMM=NUM(TOTAL_COMM$,ERR=NON_NUMERIC)
11070 _X$="SPER_CODE_PRCNT",_X=SPER_CODE_PRCNT.CTL,SPER_CODE_PRCNT=NUM(SPER_CODE_PRCNT$,ERR=NON_NUMERIC)
11080 _X$="SPER_COMM",_X=SPER_COMM.CTL,SPER_COMM=NUM(SPER_COMM$,ERR=NON_NUMERIC)
