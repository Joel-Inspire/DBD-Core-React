10000 ! 10000 - Convert numeric values to string
10010 NUM_TO_STR:
10020 INV_AMT$=STR(INV_AMT)
10030 NET_SALE$=STR(NET_SALE)
10040 GP$=STR(GP)
10050 FRT_AMT$=STR(FRT_AMT)
10060 TOTAL_COMM$=STR(TOTAL_COMM)
