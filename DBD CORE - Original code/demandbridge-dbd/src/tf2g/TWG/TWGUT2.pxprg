10020 IF STP(CUST_START$)="" THEN CUST_START$=DIM(10) ELSE CUST_START$=PAD(CUST_START$,10)
10030 IF STP(CUST_END$)="" THEN CUST_END$=DIM(10,"~") ELSE CUST_END$=PAD(CUST_END$,10)
10990 RETURN 
