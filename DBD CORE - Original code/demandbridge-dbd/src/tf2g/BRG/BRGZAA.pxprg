0050 IF TCB(13)=1 THEN BEGIN 
0060 PROCESS "BRGZAA","../BRG/BR.EN"
0070 EXIT 
0080 INIT:
0200 ! ^200,10 Setup
0210 DIM BR$:"A1:C(6),A2:C(2),A3:C(6),A4:C(1)"
0300 ! ^300,10 - Iolist
0310 BR_IOL:IOLIST BR$
0320 ! 
0500 ! ^ 500,10 - Open Files
0510 _ZZPARM=HFN; OPEN (_ZZPARM)"ZZPARM"
0520 READ (_ZZPARM,KEY=FID(0)+"      ")X3$
0530 _GL5=HFN; OPEN (_GL5)"GL5"+%C$
0540 BR_KEY$=X3$(9,3)+"B/R"
0550 RETURN 
0560 ! 
1000 ! ^1000,10 Read in parameters
1010 READ_REC:
1030 EXTRACT (_ZZPARM,ERR=NO_READ,KEY=BR_KEY$,DOM=*NEXT)BR_REC$; GOTO 1050
1040 DIM BR_REC$(16)
1050 ML_BR_MTHS$=BR_REC$(7,2),ML_BR_NXT$=BR_REC$(9,6),CB_SET_UTL$=BR_REC$(15,1)
1060 REFRESH_FLG=1
1070 RETURN 
1080 ! 
1200 ! ^1200,10 Write out parameters
1210 WRITE_REC:
1215 IF NUL(CB_SET_UTL$) THEN CB_SET_UTL$="N"
1220 BR_REC$(7,2)=ML_BR_MTHS$,BR_REC$(9,6)=ML_BR_NXT$,BR_REC$(15,1)=CB_SET_UTL$
1230 WRITE (_ZZPARM,KEY=BR_KEY$)BR_REC$
1240 CMD_STR$="END"
1250 RETURN 
1260 ! 
1270 ! 
5000 ! ^5000,10 Check for error on file
5010 NO_READ:
9900 ! ^9900,10 - Wrap up
9910 WRAP_UP:
9920 CLOSE (_ZZPARM)
9930 RETURN 
9999 END 
